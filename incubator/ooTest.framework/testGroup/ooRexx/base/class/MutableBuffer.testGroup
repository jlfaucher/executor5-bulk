::METHOD "testInsert"
   b = .mutableBuffer~new("123456")
   self~AssertEquals(6, b~length, "Length incorrect before")
   b~insert("abc")
   self~AssertEquals("abc123456", b~string, "Append failed 1")
   b~insert("abc",7,,"+")
   self~AssertEquals("abc1234abc56", b~string, "Append failed 2")
   b~insert("abc",1,0,"+")
   self~AssertEquals("abc1234abc56", b~string, "Append failed 3")
   self~AssertEquals(12, b~length, "Length incorrect after")

