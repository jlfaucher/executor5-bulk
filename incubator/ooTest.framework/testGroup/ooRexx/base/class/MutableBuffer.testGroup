::requires 'ooTest.frm'     -- load the ooRexxUnit classes

::class "MutableBuffer.testGroup" subclass ooTestCase public

::method "testInstance1"
   b = .nil
   b = .mutableBuffer~new("1234")
   self~assertNotNull(b, "Failed to get instance")
   self~assertEquals("1234", b~string, "Wrong data contained")
   self~assertEquals(4, b~length, "Wrong length")
::method "testInstance2"
   self~expectSyntax(93.938)
   b = .mutableBuffer~new(.nil)
::method "testInstance3"
   self~expectSyntax(93.938)
   b = .mutableBuffer~new("",.nil)
::method "testInstance4"
   self~expectSyntax(93.938)
   b = .mutableBuffer~new(.nil,.nil)
::method "testInstance5"
   self~expectSyntax(93.923)
   b = .mutableBuffer~new("",-1)
::method "testInstance6"
   b = .mutableBuffer~new(123,1)
   self~AssertEquals(b~string, 123, "wrong String value")

::METHOD "testAppend"
   b = .mutableBuffer~new("123")
   self~AssertEquals(3, b~length, "Length incorrect before")
   b~append("abc")
   self~AssertEquals("123abc", b~string, "Append failed 1")
   self~AssertEquals(6, b~length, "Length incorrect after")
::METHOD "testAppendSyntax1"
   b = .mutableBuffer~new
   self~expectSyntax(93.903)
   b~append()
::METHOD "testAppendSyntax2"
