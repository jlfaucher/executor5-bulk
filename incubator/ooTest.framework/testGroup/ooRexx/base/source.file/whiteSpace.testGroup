  testUnitList = .list~of(.array~of(.whiteSpace.testGroup, .list~new))

  srcLines = .array~new
  do i = 1 to 150 until srcLines[i] = "*/"
     srcLines[i] = sourceline(i)
  end

  call makeDirTestInfo .whiteSpace.testGroup, srcLines

  parse source s
  .whiteSpace.testGroup~testCaseInfo~setentry("test_Case-source", s)

  if \ .local~hasentry("bRunTestsLocally") then
     .local~bRunTestsLocally = .true

  if .bRunTestsLocally == .true then do
    ts = .TestSuite~new
    ts~addTest(.TestSuite~new(.whiteSpace.testGroup))

    testResult = ts~run
    call simpleFormatTestResults testResult
  end

return testUnitList
