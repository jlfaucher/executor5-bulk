::requires 'ooTest.frm'
::requires "FileUtils.cls"

::class "Clipboard.testGroup" subclass ooTestCase public

::method 'test_01Create'
    .local~cp = .WindowsClipBoard~new
    expected = 'a WindowsClipboard'
    self~assertEquals(expected, .cp)

::method 'test_02empty'
    expected = 0
    self~assertEquals(expected, .cp~empty)

::method 'test_03isDataAvailable'
    expected = 0
    self~assertEquals(expected, .cp~isDataAvailable)

::method 'test_04copy'
    some_test = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    .cp~copy(some_test)
    expected = 1
    self~assertEquals(expected, .cp~isDataAvailable)

::method 'test_05makeArray'
    some_test = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    .cp~copy(some_test)
    expected = 1
    self~assertEquals(expected, .cp~isDataAvailable)

    a_array = .cp~makeArray
    expected = 3
    self~assertEquals(expected, a_array~items)

::method 'test_06paste'
    expected = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    self~assertEquals(expected, .cp~paste)

::method 'test_07copyPaste'
    cb1 = .WindowsClipboard~new
    cb2 = .WindowsClipboard~new

    cb1~copy("This is only a test")
    text = cb2~paste
    self~assertEquals("This is only a test", text, 'Text retrieved from clipboard should equal text put on clipboard')

::method 'test_08cleanUp'
-- Be nice and empty the clipboard.
    expected = 0
    self~assertEquals(expected, .cp~empty)
    self~assertEquals(.false, .cp~isDataAvailable, 'Empty clipboard must not have data')
    text = .cp~paste
    self~assertEquals("", text, "Empty clipboard should return the empty string")

    -- Remove it from the .local directory, asset that it was removed.
    obj = .local~remove(cp)
    self~assertNotNull(obj, 'Removed cp from .local, it should be an object')
    self~assertTrue(obj~isA(.WindowsClipboard), 'Removed cp should be a WindowsClipboard object')







