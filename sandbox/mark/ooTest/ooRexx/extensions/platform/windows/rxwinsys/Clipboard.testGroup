  parse source . . s

  lines=.array~new
  do i=1 to 150 until lines[i]="*/"
     lines[i]=sourceline(i)
  end
                      3/0
  group = .TestGroup~new(s, lines)
  group~add(.Clipboard.testGroup)

  -- This is a Windows specific test.
  group~restrictOS("WINDOWS")

  say 'FIXME FIXME CLIPBOARD.TESTGROUP'
  -- If we are on Windows, load winsystm.cls, otherwise don't.
  if .ooRexxUnit.OSName == "WINDOWS" then do
    -- Use indirectRequire() to create a rexx program file with the requires
    -- directive for winsystm.cls.  If an empty string is returned, that
    -- indicates an error happned, so mark the test group as having no
    -- executable tests.  Otherwise, call the program file, which will add the
    -- winsystm.cls definitions to this process, and the test cases can execute.
    -- Delete the temporary program file.
    prgFile = indirectRequire('winsystm.cls')

    if prgFile == "" then do
      group~markNoTests("Error loading winsystm.cls. Clipboard test requires winsystm.cls")
    end
    else do
      call (prgFile)
      j = deleteFile(prgFile)
    end
  end

  if runTests then do
    suite = group~suite
    testResult = suite~execute
    j = simpleFormatTestResults(testResult)
  end

return group
