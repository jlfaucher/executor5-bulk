::requires 'ooTest.frm'
::class 'SysUnix.testgroup' subclass ooTestCase public

::method 'testSysUname_1'
    self~assertNotEquals("", SysUname("S"))
    self~assertNotEquals("", SysUname("N"))
    self~assertNotEquals("", SysUname("R"))
    self~assertNotEquals("", SysUname("V"))
    self~assertNotEquals("", SysUname("M"))
    self~assertNotEquals("", SysUname())

::method 'testSysGetpid_1'
    self~assertEquals("NUM", SysGetpid()~datatype())

::method 'testSysGetppid_1'
    self~assertEquals("NUM", SysGetppid()~datatype())

::method 'testSysGettid_1'
    self~assertEquals("NUM", SysGettid()~datatype())

::method 'testSysGetsid_1'
    pid = SysGetpid()
    self~assertEquals("NUM", SysGetsid(pid)~datatype())

::method 'testSysGetuid_1'
    self~assertEquals("NUM", SysGetuid()~datatype())

::method 'testSysGeteuid_1'
    self~assertEquals("NUM", SysGeteuid()~datatype())

::method 'testSysGetgid_1'
    self~assertEquals("NUM", SysGetgid()~datatype())

::method 'testSysGetegid_1'
    self~assertEquals("NUM", SysGetegid()~datatype())

::method 'testSysGetpwuid_1'
    uid = SysGetuid()
    self~assertNotEquals("", SysGetpwuid(uid, "N"))
    self~assertNotEquals("", SysGetpwuid(uid, "U"))
    self~assertNotEquals("", SysGetpwuid(uid, "G"))
    self~assertNotEquals("", SysGetpwuid(uid, "R"))
    self~assertNotEquals("", SysGetpwuid(uid, "D"))
    self~assertNotEquals("", SysGetpwuid(uid, "D"))
    self~assertNotEquals("", SysGetpwuid(uid, "S"))
    self~assertEquals("", SysGetpwuid(uid, "P"))

::method 'testSysGetpwnam_1'
    uid = SysGetuid()
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'N'))
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'U'))
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'G'))
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'R'))
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'S'))
    self~assertNotEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'D'))
    self~assertEquals("", SysGetpwnam(SysGetpwuid(uid, 'N'), 'P'))

::method 'testSysGetgrgid_1'
    gid = SysGetgid()
    self~assertNotEquals("", SysGetgrgid(gid, 'N'))
    self~assertNotEquals("", SysGetgrgid(gid, 'G'))
    self~assertEquals("", SysGetgrgid(gid, 'P'))
    self~assertTrue(SysGetgrgid(gid, 'M')~isa(.array))

::method 'testSysGetgrnam_1'
    gid = SysGetgid()
    self~assertNotEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'N'))
    self~assertNotEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'G'))
    self~assertEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'P'))
    self~assertTrue(SysGetgrnam(SysGetgrgid(gid, 'N'), 'M')~isa(.array))

::method 'testSysStat_1'
    parse source . . file
    self~assertNotEquals("", SysStat(file, 'D'))
    self~assertNotEquals("", SysStat(file, 'I'))
    self~assertNotEquals("", SysStat(file, 'P'))
    self~assertNotEquals("", SysStat(file, 'N'))
    self~assertNotEquals("", SysStat(file, 'U'))
    self~assertNotEquals("", SysStat(file, 'G'))
    self~assertNotEquals("", SysStat(file, 'N'))
    self~assertNotEquals("", SysStat(file, 'R'))
    self~assertNotEquals("", SysStat(file, 'S'))
    self~assertNotEquals("", SysStat(file, 'A'))
    self~assertNotEquals("", SysStat(file, 'M'))
    self~assertNotEquals("", SysStat(file, 'C'))

::method 'testSysAccess_1'
    parse source . . file
    self~assertEquals("NUM", SysAccess(file, 0)~datatype())
    self~assertEquals("NUM", SysAccess(file, 1)~datatype())
    self~assertEquals("NUM", SysAccess(file, 2)~datatype())
    self~assertEquals("NUM", SysAccess(file, 4)~datatype())

::method 'testSysWordexp_1'
    parse source . . file
    self~assertTrue(SysWordexp('~/*')~isa(.array))

::method 'testSysSetxattr'
    parse source . . file
    self~assertEquals("NUM", SysSetxattr(file, 'user.mime_type', 'rexx/exec')~datatype())

::method 'testSysGetxattr'
    parse source . . file
    self~assertNotEquals("", SysGetxattr(file, 'user.mime_type'))

::method 'testSysListxattr'
    parse source . . file
    self~assertTrue(SysListxattr(file)~isa(.array))

::method 'testSysRemovexattr'
    parse source . . file
    self~assertEquals("NUM", SysRemovexattr(file, 'user.mime_type')~datatype())

