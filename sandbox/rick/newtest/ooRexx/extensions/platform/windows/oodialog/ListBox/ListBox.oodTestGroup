::requires 'ooDialog.cls'
::requires 'ooTest.frm'

::class 'ListBoxSuite' public subclass ooTestSuite

::method setUp

  dlg = .SimpleDialog~new
  dlg~popup("SHOWTOP")

  -- There might be a need here to pause until the underlying dialog is
  -- created.
  j = SysSleep(.5)

  .local~testDlg = dlg

::method tearDown

  .testDlg~cancel
  .local~setEntry(testDlg)


/* class: ListBox.testGroup - - - - - - - - - - - - - - - - - - - - - - - - -*\

\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "ListBox.testGroup" public subclass ooTestCase

::method test_dlg1_delete

  ret = .testDlg~dlgTest1
  self~assertSame(4, ret)

::method  test_dlg2_delete

  ret = .testDlg~dlgTest2
  self~assertSame(3, ret)

::method  test_dlg3_delete

  ret = .testDlg~dlgTest3
  self~assertSame(-1, ret)

::method test_dlg4_deleteAll

  ret = .testDlg~dlgTest4
  self~assertSame(0, ret)

  ret = .testDlg~getLBItems
  self~assertSame(0, ret)

::method test_dlg5_insert

  ret = .testDlg~dlgTest5
  self~assertSame(5, ret)

  ret = .testDlg~getLBItems
  self~assertSame(5, ret)

-- End of class: ListBox.testGroup


::class SimpleDialog subclass UserDialog inherit advancedcontrols

::method dlgTest1
 lb = self~getListBox(100)

 ret = lb~delete(1)
 return ret

::method dlgTest2
 lb = self~getListBox(100)

 ret = lb~delete(3)
 return ret

::method dlgTest3
 lb = self~getListBox(100)

 ret = lb~delete(100)
 return ret

::method dlgTest4
 lb = self~getListBox(100)

 ret = lb~deleteAll
 return ret

::method getLBItems
  return self~getListBox(100)~items

::method dlgTest5

 items = .array~of("New York", "San Diego", "Los Angeles", "Bakersfield", "San Jose")
 lb = self~getListBox(100)
 do city over items
   ret = lb~insert(  , city)
 end

 return ret

::method init
  forward class (super) continue
  self~create(0, 0, 186, 95, "Simple Dialog")

::method defineDialog

 self~addButton(IDOK, 74, 71, 50, 14, "OK", , "DEFAULT")
 self~addListBox(100,, 10, 10, 166, 48, 'VSCROLL SORT NOTIFY' )

::method initDialog

  self~dlgTest5

