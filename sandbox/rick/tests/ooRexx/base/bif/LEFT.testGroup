  parse source . . s
  group = .TestGroup~new(s)
  group~add(.LEFT.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

-- class named exactly like file
::class "LEFT.testGroup" subclass ooTestCase public

::method 'test000'
    .local~v1 = '*'
    .local~v256 = copies('12345678',32)
    .local~v10000 = copies('\',10000)
    .local~vn256 = 256
    .local~vn2 = 2
    .local~vn3 = 3
    .local~vn4 = 4
    .local~vn6 = 6
    .local~vn21 = 21
    .local~vn25 = 25

::method 'test001'
    self~expectSyntax(40.3)
    xre = left(,)

::method 'test002'
    self~expectSyntax(40.5)
    xre = left(,1)

::method 'test003'
    self~expectSyntax(40.3)
    xre = left('ABCDEFG',)

::method 'test004'
    self~assertSame('*'||copies(' ',9999), left(.v1,00010000))

::method 'test005'
    self~assertSame('a', left('6162636465666768696a6b6c6d6e6f707172737475767778797a31323334'x,.01E2))

::method 'test006'
    self~assertSame(.v256||copies(' ',32512), left(copies('12345678',32),' 32768 '))

::method 'test007'
