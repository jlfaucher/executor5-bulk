    parse source . . fileSpec;

    group = .TestGroup~new(fileSpec)
    group~add(.SysIni.testGroup)
    group~restrictOS("WINDOWS")

    if group~isAutomatedTest then return group

    testResult = group~suite~execute~~print

return testResult
-- End of entry point.

::requires 'ooTest.frm'
::class 'SysIni.testgroup' subclass ooTestCase public

::method test_app_functions

  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~of(e., "app1", "app2", "app3")

  self~assertEquals("", SysIni(temp~fullName, 'all:', a.))
  self~verifySeq(e., a.)

  self~assertEquals("", SysIni(temp~fullName, 'all:', 'a.'))
  self~verifySeq(e., a.)
  self~assertEquals("", SysIni(temp~fullName, 'all:', 'a'))
  self~verifySeq(e., a.)

  self~of(e., "key1", "key2", "key3")

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'All:', a.))
  self~verifySeq(e., a.)

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'All:', 'a'))
  self~verifySeq(e., a.)

  self~assertEquals("ERROR", SysIni(temp~fullName, 'app3', 'All:', 'a.'))

  self~assertEquals("", SysIni(temp~fullName, 'app1', 'DEleTE:'))

  self~assertEquals("val1.2", SysIni(temp~fullName, 'app2', 'key1'))

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'key1', "delete:"))

  self~assertEquals("ERROR", SysIni(temp~fullName, 'app2', 'key1'))

  self~of(e., "key2", "key3")

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'All:', a.))
  self~verifySeq(e., a.)

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'key1', "new value"))
  self~assertEquals("new value", SysIni(temp~fullName, 'app2', 'key1'))

  self~of(e., "key2", "key3", "key1")

  self~assertEquals("", SysIni(temp~fullName, 'app2', 'All:', a.))
  self~verifySeq(e., a.)

::method test_all_apps_no_stem
  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~expectSyntax(40.919)
  rv = SysIni(temp~fullName, 'all:')

::method test_all_apps_bad_stem
  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~expectSyntax(40.919)
  rv = SysIni(temp~fullName, 'all:', 'a.1')

::method test_all_apps_extra_arg
  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~expectSyntax(40.4)
  rv = SysIni(temp~fullName, 'all:', 'a.', "foo")

::method test_all_keys_no_stem
  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~expectSyntax(40.919)
  rv = SysIni(temp~fullName, 'app2', 'all:')

::method test_all_keys_bad_stem
  temp = .TemporaryTestFile~new(self, "TestFile.ini")
  temp~createFromResource('iniFile')

  self~expectSyntax(40.919)
  rv = SysIni(temp~fullName, 'app2', 'all:', 'a.1')


::method verifySeq
  use arg source., result.

  do i=0 to result.0
     self~assertEquals(source.i, result.i)
  end

::method of
  use arg target.
  values = arg(2, 'a')

  target.0 = values~items
  do i = 1 to target.0
      target.i = values[i]
  end


::resource iniFile
[app1]
key1=val1.1
[app2]
key1=val1.2
key2=val2.2
key3=val3.2
[app3]
::END
