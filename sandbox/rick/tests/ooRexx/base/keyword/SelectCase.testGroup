::method 'test_17'
  self~assertSyntaxError(35.934, ("select case 1", "when ,1 then x = 1", "end"))

::method 'test_18'
  self~assertSyntaxError(35.934, ("select case 1", "when 1,,2 then x = 1", "end"))

::method 'test_19'
  self~expectSyntax(7.3)
  select case 3
    when 1,2 then x = 1
  end

::method "test_20"
  self~expectSyntax(97.1)
  -- testing objects that override "=="

  caseObj = .testBadEquals1~new("ABC")

   select case caseObj
      -- this should raise an error
      when .nil then do
         match = 2
      end
      otherwise
         match = 3
   end

::method "test_21"
  self~expectSyntax(91.999)
  -- testing objects that override "=="

  caseObj = .testBadEquals2~new("ABC")

  whenObj1 = .testBadEquals2~new("DEF")
  whenObj2 = .testBadEquals2~new("ABC")

   select case caseObj
      when whenObj1 then do
         match = 1
      end
      -- this one should match
      when whenObj2, .nil then do
         match = 2
      end
      otherwise
         match = 3
   end


::class testEquals
::method init
  expose value
  use strict arg value

::attribute value

::method "=="
  expose value
  use strict arg other
  if \other~isa(.testEQuals) then return .false

  return value == other~value

::class testBadEquals1
::method init
  expose value
  use strict arg value

::attribute value

::method "=="
  expose value
  use strict arg other
  return value == other~value

::class testBadEquals2
::method init
  expose value
  use strict arg value

::attribute value

::method "=="
  -- no return value
  return


