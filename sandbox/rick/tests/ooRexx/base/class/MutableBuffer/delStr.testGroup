  parse source . . s
  group = .TestGroup~new(s)
  group~add(.delStr.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "delStr.testGroup" subclass ooTestCase public

::METHOD "testdelStr"
   b = .mutableBuffer~new("1234567890")
   b~delStr(11)
   self~AssertEquals("1234567890", b~string, "delStr failed 1")
   b~delStr(1,2)
   self~AssertEquals("34567890", b~string, "delStr failed 2")

::method test_mutablebuffer_delStr_arg_0
  b = .mutableBuffer~new("1234567890")
  b~delStr
  self~AssertEquals("", b~string)

::method test_mutablebuffer_delStr_arg_1
  b = .mutableBuffer~new("1234567890")
  b~delStr(1)
  self~AssertEquals("", b~string)

::method test_mutablebuffer_delStr_arg_2_none_0
  b = .mutableBuffer~new("1234567890")
  b~delStr(, 0)
  self~AssertEquals("1234567890", b~string)

::method test_mutablebuffer_delStr_arg_3
  b = .mutableBuffer~new("1234567890")
  self~expectSyntax(93.902) -- Too many arguments in invocation of method; 2 expected
  b~delStr(1, 1, 1)

::method test_mutablebuffer_delStr_arg_2_none_nil
  b = .mutableBuffer~new("1234567890")
  self~expectSyntax(93.923) -- Invalid length argument specified
  b~delStr(, .nil)

::method test_mutablebuffer_delStr_arg_2_none_negative
  b = .mutableBuffer~new("1234567890")
  self~expectSyntax(93.923) -- Invalid length argument specified
  b~delStr(, -1)


::METHOD "testdelStrSyntax2"
   b = .mutableBuffer~new("1234567890")
   self~expectSyntax(93.924)
   b~delStr(.nil)
::METHOD "testdelStrSyntax3"
   b = .mutableBuffer~new("1234567890")
   self~expectSyntax(93.924)
   b~delStr(0)
::METHOD "testdelStrSyntax4"
   b = .mutableBuffer~new("1234567890")
   self~expectSyntax(93.923)
   b~delStr(1,.nil)
::METHOD "testdelStrSyntax5"
   b = .mutableBuffer~new("1234567890")
   self~expectSyntax(93.923)
   b~delStr(1,-1)


::options novalue error
