#! /bin/sh
#
# The idea to this kind of setup info script was stolen from numerous
# other packages, such as neon, libxml and gnome.
#
# $Id: rexxcurl-config.in,v 1.2 2010/09/20 00:10:25 mark Exp $
#
prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

usage()
{
   echo "Usage: rexxcurl-config [OPTION]"
   echo ""
   echo "Available values for OPTION include:"
   echo ""
   echo "  --help        display this help and exit"
   echo "  --libs        library linking information"
   echo "                [-L$libdir -lrexxcurl @REXX_LIBS@ @MH_EXTRA_LIBS@ -lc @MH_PACKAGE_LIBS@]"
   echo "  --libs-static static library linking information"
   echo "                [$libdir/@LIBPRE@rexxcurl@LIBPST@ @MH_EXTRA_LIBS@ -lc @MH_PACKAGE_LIBS@]"
   echo "  --prefix      RexxCURL install prefix"
   echo "                [$prefix]"
   echo "  --version     output version information"
   echo "                [@VER_DOT@]"
   echo "  --verdate     output the version date"
   echo "                [@VER_DATE@]"
   exit $1
}

if test $# -eq 0; then
   usage 1
fi

while test $# -gt 0; do
   case "$1" in
   # this deals with options in the style
   # --option=value and extracts the value part
   # [not currently used]
      -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
      *) value= ;;
   esac

   case "$1" in
      --prefix)
         echo $prefix
         ;;

      --version)
         echo @VER_DOT@
         ;;

      --verdate)
         echo @VER_DATE@
         ;;

      --help)
         usage 0
         ;;

      --libs)
         echo -L$libdir -lrexxcurl @REXX_LIBS@ @MH_EXTRA_LIBS@ -lc @MH_PACKAGE_LIBS@
         ;;

      --libs-static)
         echo $libdir/@LIBPRE@rexxcurl@LIBPST@ @MH_EXTRA_LIBS@ -lc @MH_PACKAGE_LIBS@
         ;;

      *)
         usage
         exit 1
         ;;
   esac
   shift
done

exit 0
