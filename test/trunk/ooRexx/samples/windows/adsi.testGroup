parse source . . s
group = .TestGroup~new(s)
group~add(.samples.testGroup)
group~restrictOS("WINDOWS")
if locateSamplePrg("ole\adsi") = .nil then
  group~markNoTests("No ooRexx ole\adsi file folder can be located")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::requires 'FileUtils.cls'


::class samples.testgroup subclass ooTestCase public

::constant ooTestType (.ooTestTypes~SAMPLE_TEST)

::method assertSampleRuns
  use strict arg name, nrLines = 1, input = .nil, code = 0
  sample = locateSamplePrg(name)
  self~assertNotNil(sample, "sample" name "not found")
  output = .Array~new
  error = .Array~new
  self~assertRc(code, execRexxPrg(sample, output, error, input), "sample" name)

  -- typically error should be empty
  -- in case of an expected negative rc it must contain error message lines
  if code >= 0 then
    self~assertSame(0, error~items, "sample" name "prints unexpected error output" .endofline error)
  else
    self~assertTrue(error~items >= 3, "sample" name "should print at least three error message lines" .endofline error)

  -- ignore empty lines
  output = output~toString~changeStr(.endofline~copies(2), .endofline)~makeArray
  self~assertTrue(output~items >= nrLines, "sample" name "expected to print at least" nrLines "line(s) of output; found" .endofline output)
  return output

-- tests for the ole\adsi samples, except for
-- adsi7.rex and adsi8.rex which seem to be too intrusive to run
-- as adsi7.rex creates a Windows user group and 15 Windows user
-- and adsi8.rex tries to remove above changes

-- Standard properties of this computer
::method test_adsi1
  self~assertSampleRuns("ole\adsi\adsi1.rex", 7)

-- full name for user
-- answer "n" to the "rename the full name" question
::method test_adsi2
  self~assertSampleRuns("ole\adsi\adsi2.rex", 3, .Array~of("n"))

-- list users
::method test_adsi3
  self~assertSampleRuns("ole\adsi\adsi3.rex")

-- list groups and services
::method test_adsi4
  self~assertSampleRuns("ole\adsi\adsi4.rex", 50)

-- list domains
-- takes a long time to run: approx. 30 seconds
::method test_adsi5
  self~assertSampleRuns("ole\adsi\adsi5.rex")

-- list properties
::method test_adsi6
  self~assertSampleRuns("ole\adsi\adsi6.rex", 10)


::options all syntax
