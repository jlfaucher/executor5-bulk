/*
  arithmeticEvaluation.rex an expression evaluator that builds a parse tree
*/

parse source . . s
group = .TestGroup~new(s)
group~add(.arithmeticEvaluation.testGroup)
if locateSamplePrg("arithmeticEvaluation.rex") == .nil then group~markNoTests("This is a test of a sample ooRexx program, but the sample can not be located")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::requires 'FileUtils.cls'


::class "arithmeticEvaluation.testGroup" subclass ooTestCase public

::constant ooTestType (.ooTestTypes~SAMPLE_TEST)

::method "test_arithmeticEvaluation.rex"

  prgPath = locateSamplePrg("arithmeticEvaluation.rex")
  myStem = .array~new

  Line.1 = 'Expression "2+3" parses to "(2 + 3)" and evaluates to "5"'
  Line.2 = 'Expression "2+3/4" parses to "(2 + (3 / 4))" and evaluates to "2.75"'
  Line.3 = 'Expression "2*3-4" parses to "((2 * 3) - 4)" and evaluates to "2"'
  Line.4 = 'Expression "2*(3+4)+5/6" parses to "((2 * ((3 + 4))) + (5 / 6))" and evaluates to "14.8333333"'
  Line.5 = 'Expression "2 * (3 + (4 * 5 + (6 * 7) * 8) - 9) * 10" parses to "((2 * (((3 + (((4 * 5) + (((6 * 7)) * 8)))) - 9))) * 10)" and evaluates to "7000"'
  Line.6 = 'Expression "2*-3--4+-.25" parses to "(((2 * -3) - -4) + -.25)" and evaluates to "-2.25"'
  Line.0 = 6

  -- Assert that the sample was located and that it exists.
  self~assertNotNull(prgPath)
  self~assertTrue(SysFileExists(prgPath))

  -- Execute the test, check the return value
  res = execRexxPrg(prgPath, myStem.)
  self~assertSame(0, res)

  DO i= 1 TO Line.0
    self~assertEquals(Line.i,myStem.i)
  END i

  DO i= 1 TO myStem.0
    self~assertEquals(Line.i,myStem.i)
  END i

::options all syntax

