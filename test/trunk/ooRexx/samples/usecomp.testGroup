parse source . . s
group = .TestGroup~new(s)
group~add(.usecomp.testGroup)
if locateSamplePrg("") == .nil then
  group~markNoTests("This is a test group for cross-platform samples, but no sample directory be located")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::requires 'FileUtils.cls'


::class usecomp.testgroup subclass ooTestCase public

::constant ooTestType (.ooTestTypes~SAMPLE_TEST)

::method test_usecomp
  sample = locateSamplePrg("usecomp.rex")
  self~assertNotNil(sample)
  output = .Array~new
  error = .Array~new
  self~assertRc(0, execRexxPrg(sample, output, error))
  self~assertRc(0, error~items, "unexpected error output" output~toString)
  self~assertTrue(output~items >= 8, "at least 8 lines of output expected; found" output~items)
  -- the last line is expected to end with "-i", the first item of the sorted array
  last = output[output~last]
  self~assertTrue(last~endsWith("-i"), "last line expected to end with '-i'; found" last)


::options all syntax
