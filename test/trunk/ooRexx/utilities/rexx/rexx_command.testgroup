::method test_passingArgs0
  expose outLines
  outLines~empty
  /* passing args to a program file - none    */
  theCmd = 'rexx showArgs.rex'
  expected1 = '[]'
  expected2 = 0
  expected3 = '[]'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertEquals(3, outLines~items)
  self~assertSame(expected1, outlines[1]~subWord(5,1))
  self~assertSame(expected2, outlines[2]~word(3))
  self~assertSame(expected3, outlines[3])

::method test_passingArgs1
  expose outLines
  outLines~empty
  /* passing args to a program file - one */
  theCmd = 'rexx showArgs.rex just1'
  expected1 = '[just1]'
  expected2 = 1
  expected3 = '[just1]'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertEquals(3, outLines~items)
  self~assertSame(expected1, outlines[1]~subWord(5,1))
  self~assertSame(expected2, outlines[2]~word(3))
  self~assertSame(expected3, outlines[3])

::method test_passingArgs2
  expose outLines
  outLines~empty
  /* passing args to a program file - one w/ ""   */
  theCmd = 'rexx showArgs.rex "quoted"'
  if .ooRexxUnit.OSName == 'WINDOWS' then
      expected1 = '["quoted"]'
  else
      expected1 = '[quoted]'
  expected2 = 1
  expected3 = '[quoted]'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertEquals(3, outLines~items)
  self~assertSame(expected1, outlines[1]~subWord(5,1))
