::requires 'ooTest.frm'
::requires 'FileUtils.cls'

::resource "showArgs"   -- code for the test program
-- program to display various items related to its invocation
    say 'The arguments string is ['arg(1)']'
    argcnt = .syscargs~items
    if argcnt = 1 then
        say 'There is 1 entry in .SYSCARGS:'
    else
        say 'There are' argcnt 'entries in .SYSCARGS:'
    say '['.syscargs~toString(, ", ")']'
::END

/* class: rexx_command.testGroup - - - - - - - - - - - - - - - - - - - - - - -*\

\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "rexx_command.testGroup" public subclass ooTestCase

::method init
  expose outLines
  forward class (super) continue
  outLines = .array~new -- will hold all console output
  .TemporaryTestFile~new(self, 'showArgs.rex')~~createFromResource(showArgs)

::method test_noArgs
  expose outLines
  outLines~empty
  /* the command without arguments    */
  theCmd = 'rexx'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(-1, theRC)
  self~assertFalse(outLines~isEmpty)

::method test_unknownSW
  expose outLines
  outLines~empty
  /* the command with an unknown option/switch    */
  theCmd = 'rexx -?'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(-1, theRC)
  self~assertFalse(outLines~isEmpty)

