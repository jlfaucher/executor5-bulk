  self~assertSame(expected3, outlines[3])

::method test_passingArgs4
  expose outLines
  outLines~empty
  /* passing args to a program file - quoted multiple words   */
  theCmd = 'rexx showArgs.rex l "m n" o'
  if .ooRexxUnit.OSName == 'WINDOWS' then
      expected1 = '[l "m n" o]'
  else
      expected1 = '[l m n o]'
  expected2 = 3
  expected3 = '[l, m n, o]'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertEquals(3, outLines~items)
  self~assertSame(expected1, outlines[1]~subWord(5,4))
  self~assertSame(expected2, outlines[2]~word(3))
  self~assertSame(expected3, outlines[3])

::method test_passingArgs5
  expose outLines
  outLines~empty
  /* passing args to a program file w/ unknown option */
  theCmd = 'rexx -? showArgs.rex Ho Ho'
  expected1 = '[Ho Ho]'
  expected2 = 2
  expected3 = '[Ho, Ho]'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertEquals(3, outLines~items)
  self~assertSame(expected1, outlines[1]~subWord(5,2))
  self~assertSame(expected2, outlines[2]~word(3),'SYSCARGS wrong:' outlines[3])
  self~assertSame(expected3, outlines[3])

