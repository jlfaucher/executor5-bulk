::method test_optV5
  expose outLines
  outLines~empty
  /* the v option preceded by an unknown option */
  theCmd = 'rexx -? -v'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertFalse(outLines~isEmpty)

::method test_optV6
  expose outLines
  outLines~empty
  /* the v option followed by an unknown option */
  theCmd = 'rexx -v -?'
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertFalse(outLines~isEmpty)

::method test_optE
  expose outLines
  outLines~empty
  /* the e option with quoted arguments */
  theCmd = 'rexx -e "say arg(1)" a "b c" d'
  expected = 'a b c d'
/* disabled until fix applied
  if .ooRexxUnit.OSName == 'WINDOWS' then do
      expected = 'a "b c" d'
  end   */
  theRC = issueCmd(theCmd, outLines)
  self~assertRC(0, theRC)
  self~assertSame(expected, outlines[1])
