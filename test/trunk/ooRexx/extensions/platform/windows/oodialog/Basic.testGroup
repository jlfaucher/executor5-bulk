::requires 'ooTest.frm'
::requires "FileUtils.cls"

/* class: Basic.testGroup- - - - - - - - - - - - - - - - - - - - - - - - - - -*\
    Some very basic ooDialog tests.
\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "Basic.testGroup" public subclass ooTestCase

::attribute functionFileName

::method setUp
  use arg testResult

   file = .ooRexxUnit.dir || .ooRexxUnit.directory.separator || 'ooDialogTest.rex'

   src = .array~new
   src[1] = "/* This is a temporary file for testing ooDialog. */"
   src[2] = "/* This file can always be deleted.               */"
   src[3] = ""
   self~functionFileName = createFile(src, file)

   -- If self~functionFileName is the empty string, an error happened.  It
   -- would be nice at this point to end the test.

::method tearDown
  j = deleteFile(self~functionFileName)

::method test_packageLoad

  src = .array~new
  src[1] = "return 'ooDialog'"
  src[2] = "::requires 'ooDialog' LIBRARY"
  name = addToFile(src, self~functionFileName)

  ret = 'ooDialogTest'()

  self~assertSame("ooDialog", ret)

::method  test_sleepMS_works

  src = .array~new
  src[1] = "ret = sleepMS(400)"
  src[2] = "return ret"
  src[3] = "::requires 'ooDialog.cls'"
  name = addToFile(src, self~functionFileName)

  ret = 'ooDialogTest'()
  self~assertSame(0, ret)

::method  test_sleepMS_good_value

  src = .array~new
  src[1] = "begin = .TimeSpan~new(time('F'))"
  src[2] = "j = sleepMS(500)"
  src[3] = "finish = .TimeSpan~new(time('F'))"
  src[4] = "elapsed = (finish - begin)"
  src[5] = "return elapsed~microSeconds"
  src[6] = "::requires 'ooDialog.cls'"
  name = addToFile(src, self~functionFileName)

  microSeconds = 'ooDialogTest'()

  self~assertTrue(microSeconds >= 500000)

::method  test_0MSSleep_works

  src = .array~new
  src[1] = "ret = MSSleep(400)"
  src[2] = "return ret"
  src[3] = "::requires 'OODPLAIN.CLS'"
  name = addToFile(src, self~functionFileName)

  ret = 'ooDialogTest'()
  self~assertSame(0, ret)

::method  test_1MSSleep_good_value

  src = .array~new
  src[1] = "begin = .TimeSpan~new(time('F'))"
  src[2] = "j = MSSleep(500)"
  src[3] = "finish = .TimeSpan~new(time('F'))"
  src[4] = "elapsed = (finish - begin)"
  src[5] = "return elapsed~microSeconds"
  src[6] = "::requires 'OODPLAIN.CLS'"
  name = addToFile(src, self~functionFileName)

  microSeconds = 'ooDialogTest'()

  self~assertTrue(microSeconds >= 500000)


-- End of class: Basic.testGroup


::options novalue error
