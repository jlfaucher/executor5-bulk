parse source . . s
group = .TestGroup~new(s)
group~add(.SpecialFolders.testgroup)
group~restrictOS("WINDOWS")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::class SpecialFolders.testgroup subclass ooTestCase public

::method test_shell_namespace
  -- https://docs.microsoft.com/en-gb/windows/win32/api/shldisp/ne-shldisp-shellspecialfolderconstants
  -- ssfWINDOWS      0x24 (36). Version 5.0. Windows directory. This corresponds to the %windir% or %SystemRoot% environment variables. A typical path is C:\Windows.
  -- ssfSYSTEM       0x25 (37). Version 5.0. The System folder. A typical path is C:\Windows\System32.
  ssfWINDOWS = 36
  ssfSYSTEM = 37

  shell = .oleObject~new("Shell.Application")
  self~assertIsA(shell, .oleObject)

  -- https://docs.microsoft.com/en-us/windows/win32/shell/shell-namespace
  folder = shell~NameSpace(ssfWINDOWS)

  -- https://docs.microsoft.com/en-us/windows/win32/shell/folder2-self
  item = folder~Self
  self~assertNotNull(item~name)
  self~assertSame(value("SystemRoot", , "environment")~lower, item~path~lower)

  -- now repeat for ssfSYSTEM
  folder = shell~NameSpace(ssfSYSTEM)
  item = folder~Self
  self~assertNotNull(item~name)
  self~assertSame(SysSystemDirectory()~lower, item~path~lower)


::options all syntax
