-- class named exactly like file
::class "ooRexx.Extensions.Platform.Windows.RxWinSys.Clipboard.testUnit" subclass TestCase public

::method 'test_01Create'
    .local~cp = .WindowsClipBoard~new
    expected = 'a WindowsClipboard'
    self~assertEquals('subTest1',expected,.cp)

::method 'test_02empty'
    expected = 0
    self~assertEquals('subTest2',expected,.cp~empty)

::method 'test_03isDataAvailable'
    expected = 0
    self~assertEquals('subTest3',expected,.cp~isDataAvailable)

::method 'test_04copy'
    some_test = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    .cp~copy(some_test)
    expected = 1
    self~assertEquals('subTest4',expected,.cp~isDataAvailable)

::method 'test_05makeArray'
    some_test = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    .cp~copy(some_test)
    expected = 1
    self~assertEquals('subTest5a',expected,.cp~isDataAvailable)

    a_array = .cp~makeArray
    expected = 3
    self~assertEquals('subTest5b',expected,a_array~items)

::method 'test_06paste'
    expected = 'This is line 1'.endOfLine'This is line 2'.endOfLine'This is line 3'
    self~assertEquals('subTest6',expected,.cp~paste)

::method 'test_07copyPaste'
    cb1 = .WindowsClipboard~new
    cb2 = .WindowsClipboard~new

    cb1~copy("This is only a test")
    text = cb2~paste
    self~assertEquals('Text retrieved from clipboard should equal text put on clipboard', -
                      "This is only a test", text)

::method 'test_08cleanUp'
-- Be nice and empty the clipboard.
    expected = 0
    self~assertEquals('subTest8',expected,.cp~empty)
    self~assertEquals('Empty clipboard must not have data', .false, .cp~isDataAvailable)
    text = .cp~paste
    self~assertEquals("Empty clipboard should return the empty string", "", text)

    -- Remove it from the .local directory, asset that it was removed.
    obj = .local~remove(cp)
    self~assertNotNull('Removed cp from .local, it should be an object', obj)
    self~assertTrue('Removed cp should be a WindowsClipboard object', obj~isA(.WindowsClipboard))







