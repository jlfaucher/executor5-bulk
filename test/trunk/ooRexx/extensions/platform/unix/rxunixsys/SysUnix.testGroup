::method test_wordexp
    -- wordexp is expected to be available at least on Linux and Darwin
    if .Rexxinfo~platform == "LINUX" | .Rexxinfo~platform == "DARWIN" then
      self~assertSame(0, rxfuncquery("SysWordExp"), "wordexp should be available on" .Rexxinfo~platform)
    if rxfuncquery("SysWordExp") then
      return

    -- expand all files in current directory
    -- note that wordexp() metachars won't match a leading period
    current = .File~new(".")~list
    do i = 1 to current~items
      if current[i]~startsWith(".") then
        current~remove(i)
    end
    self~assertEquivalentList(current, SysWordExp("*"))

::method test_xattr
    -- xattr functions are available on Linux and Darwin only
    if .Rexxinfo~platform == "LINUX" | .Rexxinfo~platform == "DARWIN" then
      self~assertSame(0, rxfuncquery("SysGetXattr"), "xattr functions should be available on" .Rexxinfo~platform)
    if rxfuncquery("SysGetXattr") then
      return

    -- we create a temporary file within our test tree, avoiding /tmp as it may
    -- be a tmpfs files system not supporting user.* extended attributes
    file = .TemporaryTestFile~new(self, "test_xattr")~create("test_xattr")
    f = file~string

    -- our test file may have been created with some initial extended
    -- attributes, e.g. "security.selinux" on Fedora
    -- we ignore them
    initial = SysListXattr(f)
    -- returns -1 instead of an Array if no extended attribute support
    self~assertIsA(initial, .Array, "may fail if file system has no support for extended attributes")
    self~assertSame("", SysGetXattr(f, "user.author"))
    self~assertSame(-1, SysRemoveXattr(f, "user.author"))

    -- add extended attributes
    self~assertSame(0, SysSetXattr(f, "user.author", "ooRexx"))
    self~assertSame(0, SysSetXattr(f, "user.mime_type", "text/x-oorexx"))

    -- list/get extended attributes
    list = SysListXattr(f)~difference(initial) -- ignore initial attributes
    self~assertIsA(list, .Array)
    self~assertSame(2, list~items)
    self~assertEquivalentList(("user.author", "user.mime_type"), list)
    self~assertSame("text/x-oorexx", SysGetXattr(f, "user.mime_type"))
    self~assertSame("ooRexx", SysGetXattr(f, "user.author"), "may fail on tmpfs:" f)
    self~assertSame("", SysGetXattr(f, "author")) -- does not exist

    -- remove extended attributes
    self~assertSame(-1, SysRemoveXattr(f, "author")) -- does not exist
    self~assertSame(0, SysRemoveXattr(f, "user.author"))
    list = SysListXattr(f)~difference(initial) -- ignore initial attributes
    self~assertSame(1, list~items)
    self~assertSame("user.mime_type", list[1])
    self~assertSame("text/x-oorexx", SysGetXattr(f, "user.mime_type"))

    self~assertSame(-1, SysRemoveXattr(f, "user.author")) -- already removed
    self~assertSame(0, SysRemoveXattr(f, "user.mime_type"))
    self~assertSame(0, SysListXattr(f)~difference(initial)~items)

    file~delete

::method test_SysGetservbyname
  -- we assume the following line exists in /etc/services
  -- http            80/tcp          www
  port = SysGetservbyname("http", "tcp", "port")
  self~assertEquals(80, port, "http port assumed to be 80, not" port);

  name = SysGetservbyname("http", "tcp", "name")
  self~assertEquals(80, port, "http name assumed to be 'http', not" name);
  name = SysGetservbyname("www", "tcp", "n")
  self~assertEquals(80, port, "www name assumed to be 'http', not" name);

::method test_SysGetservbyport
  -- we assume the following line exists in /etc/services
  -- http            80/tcp          www
  port = SysGetservbyport(80, "tcp", "port")
  self~assertEquals(80, port, "port 80 assumed to be 80, not" port);

  name = SysGetservbyport(80, "tcp", "name")
  self~assertEquals(80, port, "port 80 assumed to be 'http', not" name);


::method test_SysCrypt_DES
  salt = "3a"
  des = SysCrypt("passsw", salt)
  self~assertEquals(13, des~length, "13 chars DES-encoded password expected")
  self~assertTrue(des~startsWith(salt), "DES-encoded password should start with salt '3a'")
  self~assertEquals(0, des~verify(self~allowedCryptChars), "DES-encoded chars expected from set [a-zA-Z0-9./]")

::method test_SysCrypt_MD5

  -- Darwin not only doesn't support MD5,
  -- (https://en.wikipedia.org/wiki/Crypt_(C)#Support_in_operating_systems)
  -- it will also just happily return a 13-chars DES-encrypted string instead
  if .ooRexxUnit.OSName == "DARWIN" then
    return

  salt = "$1$salt"                     -- MD5 id is 1, salt may be up to 16 chars
  md5 = SysCrypt("passsw", salt)
  if md5~length \= 0 then do           -- MD5 might not be supported
    self~assertEquals(salt~length + 1 + 22, md5~length, salt~length + 1 + 22 "chars MD5-encoded password expected")
    self~assertTrue(md5~startsWith(salt), "MD5-encoded password should start with '"salt"'")
    self~assertEquals(0, md5~verify(self~allowedCryptChars, , salt~length + 2), "MD5-encoded chars expected from set [a-zA-Z0-9./]")
  end

::method allowedCryptChars
  -- set [a-zA-Z0-9./]
  return .String~alnum || "./"


::options all syntax
