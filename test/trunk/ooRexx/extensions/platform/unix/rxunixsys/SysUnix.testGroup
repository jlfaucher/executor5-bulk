    parse source . . fileSpec

    group = .TestGroup~new(fileSpec)

    group~add(.SysUnix.testGroup)
    group~restrictOS("UNIX")

    .context~package~loadLibrary("rxunixsys")

    if group~isAutomatedTest then return group

    testResult = group~suite~execute~~print

return testResult

-- End of entry point.

::requires 'ooTest.frm'
::class 'SysUnix.testgroup' subclass ooTestCase public

-- these are file system entities wich we assume to always exist
-- this source file, our current directory, our rxapi socket, and /dev/null
::constant file (.context~package~name)
::constant directory (directory())
::constant socket ((value("XDG_RUNTIME_DIR", , "environment") "/tmp")~word(1) || "/.ooRexx-" || .RexxInfo~version || "-" || .RexxInfo~architecture || "-" || userid() || ".service")
::constant characterDevice "/dev/null"

::constant names (.Array~of(self~file, self~directory, self~socket, self~characterDevice))
::constant fileNotThere "/non-existing-directory/non-existing-file"

