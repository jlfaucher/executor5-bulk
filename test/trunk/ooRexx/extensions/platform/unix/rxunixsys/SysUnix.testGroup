::method 'testSysGetpwuid_1'
    uid = SysGetuid()
    self~assertNotEquals("", SysGetpwuid(uid, "NAME"))
    self~assertNotEquals("", SysGetpwuid(uid, "user"))
    self~assertNotEquals("", SysGetpwuid(uid, "Group"))
    -- at least on zLinux "realname" may be empty, so we just test for String
    self~assertIsA(SysGetpwuid(uid, "real name"), .String)
    self~assertNotEquals("", SysGetpwuid(uid, "dir"))
    self~assertNotEquals("", SysGetpwuid(uid, "shell"))
    self~assertEquals("", SysGetpwuid(uid, "PASSSWORD"))

::method 'testSysGetpwnam_1'
    nam = SysGetpwuid(SysGetuid(), 'name')
    self~assertNotEquals("", SysGetpwnam(nam, 'nam'))
    self~assertNotEquals("", SysGetpwnam(nam, 'usr'))
    self~assertNotEquals("", SysGetpwnam(nam, 'grp'))
    -- at least on zLinux "realname" may be empty, so we just test for String
    self~assertIsA(SysGetpwnam(nam, 'real'), .String)
    self~assertNotEquals("", SysGetpwnam(nam, 'shell'))
    self~assertNotEquals("", SysGetpwnam(nam, 'dir'))
    self~assertEquals("", SysGetpwnam(nam, 'pw'))

::method 'testSysGetgrgid_1'
    gid = SysGetgid()
    self~assertNotEquals("", SysGetgrgid(gid, 'name'))
    self~assertNotEquals("", SysGetgrgid(gid, 'group'))
    self~assertEquals("", SysGetgrgid(gid, 'password'))
    self~assertIsA(SysGetgrgid(gid, 'members'), .Array)

::method 'testSysGetgrnam_1'
    gid = SysGetgid()
    self~assertNotEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'NAME'))
    self~assertNotEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'GROUP'))
    self~assertEquals("", SysGetgrnam(SysGetgrgid(gid, 'N'), 'PW'))
    self~assertTrue(SysGetgrnam(SysGetgrgid(gid, 'N'), 'MEMBER')~isa(.array))

