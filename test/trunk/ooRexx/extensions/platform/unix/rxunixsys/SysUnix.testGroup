::method 'testSysGetpwuid_1'
    uid = SysGetuid()
    self~assertNotEquals("", SysGetpwuid(uid, "NAME"))
    self~assertNotEquals("", SysGetpwuid(uid, "user"))
    self~assertNotEquals("", SysGetpwuid(uid, "Group"))
    -- at least on zLinux "realname" may be empty, so we just test for String
    self~assertIsA(SysGetpwuid(uid, "real name"), .String)
    self~assertNotEquals("", SysGetpwuid(uid, "dir"))
    self~assertNotEquals("", SysGetpwuid(uid, "shell"))
    self~assertEquals("", SysGetpwuid(uid, "PASSSWORD"))

