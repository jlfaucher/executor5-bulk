::method test_SysGetservbyname
  -- we assume the following line exists in /etc/services
  -- http            80/tcp          www
  port = SysGetservbyname("http", "tcp", "port")
  self~assertEquals(80, port, "http port assumed to be 80, not" port);

  name = SysGetservbyname("http", "tcp", "name")
  self~assertEquals(80, port, "http name assumed to be 'http', not" name);
  name = SysGetservbyname("www", "tcp", "n")
  self~assertEquals(80, port, "www name assumed to be 'http', not" name);

::method test_SysGetservbyport
  -- we assume the following line exists in /etc/services
  -- http            80/tcp          www
  port = SysGetservbyport(80, "tcp", "port")
  self~assertEquals(80, port, "port 80 assumed to be 80, not" port);

  name = SysGetservbyport(80, "tcp", "name")
  self~assertEquals(80, port, "port 80 assumed to be 'http', not" name);


::method test_SysCrypt_DES
  salt = "3a"
  des = SysCrypt("passsw", salt)
  self~assertEquals(13, des~length, "13 chars DES-encoded password expected")
  self~assertTrue(des~startsWith(salt), "DES-encoded password should start with salt '3a'")
  self~assertEquals(0, des~verify(self~allowedCryptChars), "DES-encoded chars expected from set [a-zA-Z0-9./]")

::method test_SysCrypt_MD5

  -- Darwin not only doesn't support MD5,
  -- (https://en.wikipedia.org/wiki/Crypt_(C)#Support_in_operating_systems)
  -- it will also just happily return a 13-chars DES-encrypted string instead
  if .ooRexxUnit.OSName == "DARWIN" then
    return

  salt = "$1$salt"                     -- MD5 id is 1, salt may be up to 16 chars
  md5 = SysCrypt("passsw", salt)
  if md5~length \= 0 then do           -- MD5 might not be supported
    self~assertEquals(salt~length + 1 + 22, md5~length, salt~length + 1 + 22 "chars MD5-encoded password expected")
    self~assertTrue(md5~startsWith(salt), "MD5-encoded password should start with '"salt"'")
    self~assertEquals(0, md5~verify(self~allowedCryptChars, , salt~length + 2), "MD5-encoded chars expected from set [a-zA-Z0-9./]")
  end

::method allowedCryptChars
  -- set [a-zA-Z0-9./]
  return .String~alnum || "./"


::options novalue error
