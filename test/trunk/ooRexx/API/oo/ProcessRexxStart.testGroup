  self~assertEquals(43, tester~RC)
  tester~functionExit = "ERROR"
  tester~callRexxStart(self~resolveTestProgram('tests/functionExit.rex'), .array~of("TESTSUBCALL()"))
  self~assertEquals(48, tester~RC)

