  self~assertEquals("SUCCESS 0", tester~callRexxStart(self~resolveTestProgram('tests/commandExit.rex'), .array~of("CMD", "GOOD")))
  self~assertEquals("ERROR 1", tester~callRexxStart(self~resolveTestProgram('tests/commandExit.rex'), .array~of("CMD", "ERROR")))
  self~assertEquals("FAILURE -2", tester~callRexxStart(self~resolveTestProgram('tests/commandExit.rex'), .array~of("CMD", "FAILURE")))
