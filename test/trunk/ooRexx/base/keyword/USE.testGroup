  parse source . . fileSpec

  group = .TestGroup~new(fileSpec)
  group~add(.USE.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "USE.testGroup" subclass ooTestCase public


::method "test_USE"
  o1=.object~new

  self~assertEquals(o1, test_01(o1))
  self~assertEquals(.nil, test_02())
  self~assertEquals(o1, test_03( ,o1))

  return

test_01: procedure
  use arg o
  return o

test_02: procedure
  use arg o=.nil
  return o

test_03: procedure
  use arg o=.nil, o1=.nil
  return o1



::method "test_USE_STRICT"
  o1=.object~new

  self~assertEquals(o1, test_01(o1))
  self~assertEquals(.nil, test_02())
  self~assertEquals(o1, test_03( ,o1))
  self~assertEquals(.nil, test_04( ))
  self~assertEquals(.nil, test_05( ))
  self~assertEquals(o1, test_06(o1, "aha", .nil, "no..." ))

  return

test_01: procedure
  use strict arg o
  return o

test_02: procedure
  use strict arg o=.nil
  return o

test_03: procedure
  use strict arg o=.nil, o1=.nil
  return o1

test_04: procedure
  use strict arg
  return .nil

test_05: procedure
  use strict arg ...
  return .nil

test_06: procedure
  use strict arg o, ...
  return o



::method "test_USE_STRICT_error01 40.4"
  self~expectSyntax(40.4)
  call test "o"
  return
test:
  use strict arg
  return


::method "test_USE_STRICT_error02 40.3 "
