  return


::method "test_USE_STRICT_error03 40.4 "
  self~expectSyntax(40.4)
  call test "a", "b"
  return
test:
  use strict arg o
  return




::method "test_USE_assign_values_to_attributes_or_collections"
  d=.directory~new
  a=.array~new

  text="Tirol isch lei oans, isch a Landl a kloans, isch a ..."
  parse var text a1 a2 a3 a4 a5 .

  -- parse var text d~word1 a[2] a[3] a[4] d~word5 .

  call test_01 a1, a2, a3, a4, a5

  self~assertEquals(a1, d~word1)
  self~assertNull(a[1])
  self~assertEquals(a2, a[2])
  self~assertEquals(a3, a[3])
  self~assertEquals(a4, a[4])
  self~assertNull(a[5])
  self~assertEquals(a5, d~word5)
  return

test_01:
  use arg d~word1, a[2], a[3], a[4], d~word5
  return


::method test_invalid_option
  -- USE must be followed by the keyword ARG or LOCAL
  self~assertSyntaxError(25.905, "use upper arg")

::method test_strict_invalid_option
  -- USE must be followed by the keyword ARG or LOCAL
  self~assertSyntaxError(25.905, "use strict upper arg")

::method test_none
  use arg
  use strict arg

::method test_ellipsis_only
  use arg ...
  use strict arg ...

::method test_comma_only
  use arg ,;                           -- requires explicit line-end semicolon
  -- "use strict arg [,]+" doesn't really do what it suggests
  -- might be regarded as a bug, as it should fail because we have zero args
  use strict arg , ,;                  -- requires explicit line-end semicolon

::method test_comma_ellipsis
  use arg , ...
  -- "use strict arg [,]+ ..." doesn't really do what it suggests
  -- might be regarded as a bug, as it should fail because we have zero args
  use strict arg , , ...

-- no dot placeholder allowed
::method test_dot
  -- Variable symbol must not start with a "."
  self~assertSyntaxError(31.3, "use arg .")

-- no dot placeholder allowed
::method test_strict_dot
  -- Variable symbol must not start with a "."
  self~assertSyntaxError(31.3, "use strict arg .")

::method test_string
  -- The USE instruction requires a comma-separated list of variables or assignment message terms
  self~assertSyntaxError(89.1, "use arg 'a'")

::method test_strict_string
  -- Variable symbol must not start with a number
  self~assertSyntaxError(31.2, "use strict arg 0")

::method test_no_equal
  -- Extra token ("==") found in USE ARG variable reference; "," or end of instruction expected
  self~assertSyntaxError(46.902, "use arg a == 2")

::method test_strict_no_equal
  -- Extra token ("==") found in USE ARG variable reference; "," or end of instruction expected
  self~assertSyntaxError(46.902, "use strict arg a == 2")

::method test_default_only
  -- Incorrect expression detected at "="
  self~assertSyntaxError(35.1, "use arg = .true")

::method test_strict_default_only
  -- Incorrect expression detected at "="
  self~assertSyntaxError(35.1, "use strict arg = .true")

::method test_default_missing
  -- Missing expression following "=" token of a USE STRICT ARG instruction
  self~assertSyntaxError(35.930, "use arg a =")

::method test_strict_default_missing
  -- Missing expression following "=" token of a USE STRICT ARG instruction
  self~assertSyntaxError(35.930, "use strict arg a =")

::method test_default_extra
  -- Variable symbol must not start with a number
  self~assertSyntaxError(31.2, "use arg a = .true 2")

::method test_strict_default_extra
  -- Variable symbol must not start with a number
  self~assertSyntaxError(31.2, "use strict arg a = .true 2")

::method test_ellipsis_extra
  -- The "..." argument marker can only appear at the end of the argument list
  self~assertSyntaxError(99.930, "use arg a, b, ..., c")

::method test_strict_ellipsis_extra
  -- The "..." argument marker can only appear at the end of the argument list
  self~assertSyntaxError(99.930, "use strict arg a, b, ..., c")

-- various tests with no arguments specified
::method test_no_arg
  a = 42
  use arg a
  -- USE ARG drops a variable, if it didn't receive a value
  self~assertFalse(var("A"))

  use arg a = 42
  self~assertSame(42, a)

  use strict arg a = .true, ...
  self~assertTrue(a)

  self~assignmentTerm = 42
  use arg self~assignmentTerm
  -- USE ARG leaves an assigment message term as-is, if it didn't receive a value
  self~assertSame(42, self~assignmentTerm)

  array = .Array~of(42)
  use arg array[1]
  -- USE ARG leaves an assigment message term as-is, if it didn't receive a value
  self~assertSame(42, array[1])

  use arg , b
  self~assertFalse(var("B"))

  use arg a, b, c = (3 * 3 * 3)
  self~assertFalse(var("A"))
  self~assertFalse(var("B"))
  self~assertSame(3 * 3 * 3, c)

-- we call ourself with a single arg, and run various tests with it
::method test_one_arg
  if arg() = 0
    then forward array (.nil)

  a = 42
  use arg a
  self~assertNull(a)

  use arg a = 42
  self~assertNull(a)

  use strict arg a = .true, ...
  self~assertNull(a)

  self~assignmentTerm = 42
  use arg self~assignmentTerm
  self~assertNull(self~assignmentTerm)

  array = .Array~of(42)
  use arg array[1]
  self~assertNull(array[1])

  use arg , b
  self~assertFalse(var("B"))

  use arg a, b, c = (a)
  self~assertNull(a)
  self~assertFalse(var("B"))
  self~assertNull(c)

-- we call ourself with an omitted and a specified arg, and run various tests
::method test_two_args_first_omitted
  if arg() = 0
    then forward array (, .Array~of(42))

  a = 42
  use arg a
  -- USE ARG drops a variable, if it didn't receive a value
  self~assertFalse(var("A"))

  use arg a = 42
  self~assertSame(42, a)

  use strict arg a = .true, ...
  self~assertTrue(a)

  self~assignmentTerm = 42
  use arg self~assignmentTerm
  -- USE ARG leaves an assigment message term as-is, if it didn't receive a value
  self~assertSame(42, self~assignmentTerm)

  array = .Array~of(42)
  use arg array[1]
  -- USE ARG leaves an assigment message term as-is, if it didn't receive a value
  self~assertSame(42, array[1])

  use arg , b
  self~assertIsA(b, .Array)

  use arg a, b, c = (b[1] / 2)
  self~assertFalse(var("A"))
  self~assertIsA(b, .Array)
  self~assertSame(21, c)

-- we call ourself with two args, and run various tests
::method test_two_args
  if arg() = 0
    then forward array ("first", 2)

  a = 42
  use arg a
  self~assertSame("first", a)

  use arg a = 42
  self~assertSame("first", a)

  use strict arg a = .true, ...
  self~assertSame("first", a)

  self~assignmentTerm = 42
  use arg self~assignmentTerm
  self~assertSame("first", self~assignmentTerm)

  array = .Array~of(42)
  use arg array[1]
  self~assertSame("first", array[1])

  use arg , b
  self~assertSame(2, b)

  use arg a, b, c = (arg())
  self~assertSame("first", a)
  self~assertSame(2, b)
  self~assertSame(2, c)

::method test_strict_no_args
  -- Not enough arguments for method; 1 expected
  self~expectSyntax(93.901)
  use strict arg a

::method test_strict_one_arg
  if arg() = 0
    then forward array (.false)
  -- Not enough arguments for method; 2 expected
  self~expectSyntax(93.901)
  use strict arg , a

::method test_strict_two_args
  if arg() = 0
    then forward array (1, 42)
  -- Not enough arguments for method; 3 expected
  self~expectSyntax(93.901)
  use strict arg a, , b, ...

::attribute assignmentTerm

