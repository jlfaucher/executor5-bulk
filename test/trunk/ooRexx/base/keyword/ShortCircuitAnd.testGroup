  parse source . . fileSpec

  group = .TestGroup~new(fileSpec)
  group~add(.ShortCircuitAnd.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "ShortCircuitAnd.testGroup" subclass ooTestCase public

::method "test_if"

  i=0
  if .true, .true, .true then
  do
     i=i+1
     if .true, .true, .false then
     do
        i=i+1
     end
  end
  self~assertEquals(1, i)



::method "test_when"

  i=0
  select
     when .true, .true, .true, .false  then i=i+99
     when .true, .false, .true, .false then i=i+99
     when .true, .true, .true          then i=i+1
     otherwise  i=99
  end
  self~assertEquals(1, i)


::method "test_do_while"

  i=0
  do while .true, .true, i=0, .true
     i=i+1
  end
  self~assertEquals(1, i)


::method "test_do_until"

  i=0
  do until .true, .true, i>2, .true
     i=i+1
  end
  self~assertEquals(3, i)


::method "test_loop_while"

  i=0
  loop while .true, .true, i=0, .true
     i=i+1
  end
  self~assertEquals(1, i)


::method "test_loop_until"

  i=0
  loop until .true, .true, i>2, .true
     i=i+1
  end
  self~assertEquals(3, i)


::options novalue error
