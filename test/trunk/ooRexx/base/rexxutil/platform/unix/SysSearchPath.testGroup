    parse source . . fileSpec;

    group = .TestGroup~new(fileSpec)
    group~add(.SysSearchPath.testGroup)
    group~restrictOS("LINUX")

    if group~isAutomatedTest then return group

    testResult = group~suite~execute~~print

return testResult
-- End of entry point.

::requires 'ooTest.frm'
::class 'SysSearchPath.testgroup' subclass ooTestCase public

------------------------------------
-- Wrong parameters are detected
------------------------------------
::method 'testSearchPath_Invalid_Parameters_1'
    self~expectSyntax(40.1)
    rv = SysSearchPath()

::method 'testSearchPath_Invalid_Parameters_2'
    self~expectSyntax(40.1)
    rv = SysSearchPath("varname")

::method 'testSearchPath_Invalid_Parameters_3'
    self~expectSyntax(40.1)
    rv = SysSearchPath("varname", "filename", "bad option")

::method 'testSearchPath_Invalid_Parameters_4'
    self~expectSyntax(40.1)
    rv = SysSearchPath("", "filename")
    
::method 'testSearchPath_Invalid_Parameters_5'
    self~expectSyntax(40.1)
    rv = SysSearchPath("varname", "")
    
------------------------------------
-- Valid parameters are accepted
------------------------------------

::method 'testSearchPath_Valid_Parameters_1'
    self~assertEquals("", SysSearchPath("*non existent varname*", "*non existent filename*"))

::method 'testSearchPath_Valid_Parameters_2'
    self~assertEquals("", SysSearchPath("*non existent varname*", "*non existent filename*", "C"))
    self~assertEquals("", SysSearchPath("*non existent varname*", "*non existent filename*", "c"))

::method 'testSearchPath_Valid_Parameters_3'
    self~assertEquals("", SysSearchPath("*non existent varname*", "*non existent filename*", "N"))
    self~assertEquals("", SysSearchPath("*non existent varname*", "*non existent filename*", "n"))

------------------------------------
-- If installed correctly, rexx should be in the path
------------------------------------

::method 'testSearchPath_Rexx_is_found_1'
    self~assertNotEquals("", SysSearchPath("PATH", "rexx"))

::method 'testSearchPath_Rexx_is_found_2'
    self~assertNotEquals("", SysSearchPath("PATH", "rexx", "C"))
    self~assertNotEquals("", SysSearchPath("PATH", "rexx", "c"))

::method 'testSearchPath_Rexx_is_found_3'
    self~assertNotEquals("", SysSearchPath("PATH", "rexx", "N"))
    self~assertNotEquals("", SysSearchPath("PATH", "rexx", "n"))

------------------------------------
-- This script is necessarily in its own directory 
------------------------------------

::method 'testSearchPath_Current_Script'
    parse source . . me
    lastSlash = me~lastPos("/")
    directory = me~left(lastSlash - 1)
    filename = me~substr(lastSlash + 1)

    oldval = value("varname", , "ENVIRONMENT")
    call value "varname", directory, "ENVIRONMENT"
    self~assertNotEquals("", SysSearchPath("varname", filename), "01 : Must be found because current dir is in path")
    call value "varname", "*dummy before*:"directory":*dummy after*", "ENVIRONMENT"
    self~assertNotEquals("", SysSearchPath("varname", filename), "02 : Must be found because current dir is in path")
    call value "varname", "a"~copies(2000)":"directory, "ENVIRONMENT"
    self~assertNotEquals("", SysSearchPath("varname", filename), "03 : Must be found, even if path > 1024 characters (was a bug under Windows)")
    call value "varname", oldval, "ENVIRONMENT" -- restore

    curdir = directory(directory)
    self~assertNotEquals("", SysSearchPath("*non existent varname*", filename, "c"), "04 : Must be found because current dir is searched")
    self~assertEquals("", SysSearchPath("*non existent varname*", filename, "n"), "05 : Must not be found because current dir is not searched")
    call directory curdir -- restore


::options novalue error
