parse source . . s
group = .TestGroup~new(s)
group~add(.SysDrive.testGroup)
group~restrictOS("WINDOWS")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::class SysDrive.testgroup subclass ooTestCase public

-- test SysDriveInfo, SysVolumeLabel, SysFileSystemType

::method test_driveinfo_args_too_many
  self~expectSyntax((88.922, 1)) -- Too many arguments in invocation; 1 expected
  call SysDriveInfo "c:", ""

::method test_volumelabel_args_too_many
  self~expectSyntax((88.922, 1)) -- Too many arguments in invocation; 1 expected
  call SysVolumeLabel "c:", ""

::method test_filesystemtype_args_too_many
  self~expectSyntax((88.922, 1)) -- Too many arguments in invocation; 1 expected
  call SysFileSystemType "c:", ""

-- the current drive should be the default if no argument is given
::method test_no_args
  cd = directory()
  do d over "C:", "\\localhost\c$"
    call directory d
    self~assertSame(SysDriveInfo(d), SysDriveInfo(), "SysDriveInfo() test expected to sometimes fail with a small free space delta")
    self~assertSame(SysVolumeLabel(d), SysVolumeLabel())
    self~assertSame(SysFileSystemType(d), SysFileSystemType())
  end
  call directory cd

-- null string should be returned for invalid or unused drive
::method test_no_drive
  do d over "", SysDriveMap(, "free")~word(1)
    self~assertSame("", SysDriveInfo(d), "SysDriveInfo" d)
    self~assertSame("", SysVolumeLabel(d), "SysVolumeLabel" d)
    self~assertSame("", SysFileSystemType(d), "SysFileSystemType" d)
  end

-- there are a bunch of ways to specify a drive (i. e. volume)
::method test_volume_specifications
  -- https://docs.microsoft.com/en-us/previous-versions/windows/desktop/vdswmi/win32-volume
  -- Win32_Volume may be deprecated, but it gives us what we need: the Volume GUID
  disk = self~wmi('SELECT * FROM Win32_Volume WHERE DriveLetter = "C:"')
  self~assertSame("OLEObject", disk~class~id, disk)

  -- this test requires that drive C: actually has a label set
  info = disk~FreeSpace disk~Capacity disk~Label -- drive free total label
  do volume over "c", "c:", "c:\", "\\?\c:", "\\.\c:", disk~DeviceId, -
    "\\localhost\c$", "\\127.0.0.1\c$", "\\" || value("COMPUTERNAME", , "environment") || "\c$", -
    "\\.\UNC\localhost\c$"
    -- c is returned as c:, any trailing backslash is removed
    vol = volume~startsWith("c")~?("c:", volume)~strip("t", "\")
    self~assertSame(vol info, SysDriveInfo(volume), "SysDriveInfo("volume") test expected to sometimes fail with a small free space delta")
    self~assertSame(disk~Label, SysVolumeLabel(volume), "SysVolumeLabel" volume)
    self~assertSame(disk~FileSystem, SysFileSystemType(volume), "SysFileSystemType" volume)
  end

-- test returned values for all drives in use
::method test_drives
  do d over SysDriveMap("c:")~subWords
    info = SysDriveInfo(d)
    parse var info drive free size label

    -- https://docs.microsoft.com/en-us/windows/win32/cimwin32prov/win32-logicaldisk
    disk = self~wmi('SELECT * FROM Win32_LogicalDisk WHERE DeviceID = "' || d || '"')
    self~assertSame("OLEObject", disk~class~id, disk)

    -- for inaccessible drives SysDriveInfo returns the null string, no device id
    self~assertOneOrAnother("", disk~DeviceID, drive, "SysDriveInfo" d info)
    self~assertSameNilNull(disk~FreeSpace, free, "SysDriveInfo" d info"; test expected to sometimes fail with a small free space delta")
    self~assertSameNilNull(disk~Size, size, "SysDriveInfo" d info)
    self~assertSameNilNull(disk~VolumeName, label, "SysDriveInfo" d info)

    self~assertSameNilNull(disk~VolumeName, SysVolumeLabel(d), "SysVolumeLabel" d)
    self~assertSameNilNull(disk~FileSystem, SysFileSystemType(d), "SysFileSystemType" d)
  end


-- like assertSame, but compare with nullstring instead of .nil
::method assertSameNilNull
  use strict arg expected, actual, description
  self~assertSame((expected == .nil)~?("", expected), actual, description)

-- retrieve WMI information
::method wmi
  use strict arg query
  info = query -- if the query fails, we return the query string
  -- this should always return a set of a single object only
  do info over .OLEObject~GetObject("winmgmts:")~ExecQuery(query)
  end
  return info


::options digits 18 all syntax
