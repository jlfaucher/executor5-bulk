  parse source . . s

  group = .TestGroup~new(s)
  group~add(.SysWinVer.testGroup)
  group~restrictOS("WINDOWS")

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult
-- End of entry point.

::requires 'ooTest.frm'

::class "SysWinVer.testGroup" public subclass ooTestCase


::method test_winver_one_arg
  self~expectSyntax(88.922) -- Too many arguments in invocation; 0 expected.
  call SysWinVer 1

::method test_winver_wellformed
  parse value SysWinVer() with . version

  self~assertFalse(version == "", "SysWinVer should not return null string")

  parse var version a "." b "." c
  self~assertTrue(a~dataType("whole"), "SysWinVer should return vv.rr.mmmm; found" version)
  self~assertTrue(b~dataType("whole"), "SysWinVer should return vv.rr.mmmm; found" version)
  self~assertTrue(c~dataType("whole"), "SysWinVer should return vv.rr.mmmm; found" version)

::method test_winver_ver
  parse value SysWinVer() with . version
  address "path" "cmd /c ver" with output stem o.
  ver = o.~~remove(0)~allItems~toString(, " ")
  do word over ver~subWords
    if word~startsWith(version) then
      return
  end
  self~assertFail("SysWinVer" version "should match ver command output" ver)


::options novalue error
