/* class: SysStemSort.testGroup  - - - - - - - - - - - - - - - - - - - - - - -*\

\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "SysStemSort.testGroup" public subclass ooTestCase

::method test_already_sorted

  -- Set up the stem with already sorted values.  Recall that 10 sorts before
  -- 2.
  s.0 = 9
  do i = 1 to 9
    s.i = i
  end

  -- Do the sort.
  ret = SysStemSort(s.)

  -- This tests that the return is equal to 0
  self~assertTrue(ret == 0)

  -- This tests the stem values are in order 1 through 9
  do i = 1 to 9
    self~assertEquals(i, s.i)
  end

::method test_simple_letters

  -- Set up out expected values
  e.1 = 'a'
  e.2 = 'b'
  e.3 = 'c'
  e.4 = 'd'
  e.5 = 'e'
  e.6 = 'f'

  -- Set up the values to sort
  s.1 = 'c'
  s.2 = 'b'
  s.3 = 'a'
  s.4 = 'f'
  s.5 = 'd'
  s.6 = 'e'
  s.0 = 6

  -- Do the sort.
  ret = SysStemSort(s.)

  -- This tests that the return is equal to 0
  self~assertTrue(ret == 0)

  -- This tests the stem values are in the expected order
  do i = 1 to s.0
    self~assertEquals(e.i, s.i)
  end

::method test_bad_direction_arg

  e.1 = 'a'
  e.2 = 'b'

  s.0 = 2
  s.1 = 'b'
  s.2 = 'a'

  self~expectSyntax(40.1)

  ret = SysStemSort(s., 'F')
  self~assertTrue(ret == 0)

::method test_too_many

  e.1 = 'a'
  e.2 = 'b'
  e.2 = 'c'
  e.2 = 'd'

  s.0 = 4
  s.1 = 'b'
  s.2 = 'a'

  self~expectSyntax(40.1)
  ret = SysStemSort(s., 'A')
  self~assertTrue(ret == 0)

::method test_descending_simple

  -- Expected values
  e.1 = 'f'
  e.2 = 'e'
  e.3 = 'd'
  e.4 = 'c'
  e.5 = 'b'
  e.6 = 'a'

  -- Values to sort
  s.1 = 'c'
  s.2 = 'b'
  s.3 = 'e'
  s.4 = 'a'
  s.5 = 'd'
  s.6 = 'f'
  s.0 = 6

  ret = SysStemSort(s., 'D')
  self~assertTrue(ret == 0)

  -- This tests the stem values are in the expected order
  do i = 1 to s.0
    self~assertEquals(e.i, s.i)
  end

::method "test_sort"

  self~of(a.)
  self~of(a1.)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1)
  self~of(a1., 1)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1,2)
  self~of(a1., 1,2)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1,2,3)
  self~of(a1., 1,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1,3)
  self~of(a1., 1,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1,3,2)
  self~of(a1., 1,2,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1)
  self~of(a1., 1,2)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  -- the mergesort algorithm uses an insersion sort for partitions with fewer than
  -- 8 items, so we need to throw in a few longer variations

  self~of(a., 'y', 'o', 'i', 'x', 'u', 'q', 'e', 'l', 'p', 'b', 'g', 't', 'd', 'c', 'z', 'm', 'h', 'v', 'j', 'r', 'a', 'n', 'f', 'w', 'k', 's')
  self~of(a1., 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z')
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  return

::method "test_invalid_order"
  self~expectSyntax("40.1")

  source.0 = 3;
  source.1 = 2
  source.2 = 1
  source.3 = 3

  r = SysStemSort('source.', "F")

::method verifySeq
  use arg source., result.

  do i=0 to result.0
     self~assertEquals(source.i, result.i)
  end

::method of
  use arg target.
  values = arg(2, 'a')

  target.0 = values~items
  do i = 1 to target.0
      target.i = values[i]
  end

::method dumpstem
  use arg a.
  say "size is" a.0

  do i = 1 to a.0
      say "Item" i "is" a.i
  end

