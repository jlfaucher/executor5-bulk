::method "test_POS"
    self~assertEquals(6, 'Saturday'~POS('day'))
    self~assertEquals(0, 'abc def ghi'~POS('x'))
    self~assertEquals(4, 'abc def ghi'~POS(' '))
    self~assertEquals(8, 'abc def ghi'~POS(' ',5))

   -- new test
    self~assertEquals(0, 'abc def ghi'~POS('',5))

::method testRange01
    self~assertSame('0', ''~pos('',,100))
    self~assertSame('0', ''~pos('',,0))
    self~assertSame('0', 'abcdeeeeef'~pos('e',,4))
    self~assertSame('0', 'abcdeeeeef'~pos('e',1,4))
    self~assertSame('5', 'abcdeeeeef'~pos('e',2,4))
    self~assertSame('0', 'abcdeeeeef'~pos('eee',5,2))

