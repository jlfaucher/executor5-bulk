  parse source . . s
  group = .TestGroup~new(s)
  group~add(.String_translateMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "String_translateMethod.testGroup" subclass ooTestCase public

::method 'test000'
    .local~vit = copies('0',100000)||'b'
    .local~vot = copies('1',100000)||'B'

::method 'test001'
    self~assertSame(('ABC'), 'abc'~translate())

::method 'test002'
    self~assertSame(('123$'), '00010203'x~translate('123',,'$'))

::method 'test003'
    self~assertSame(('123 '), '00010203'x~translate('123'))

::method 'test004'
    self~assertSame(('123 '), '00010203'x~translate('123',))

::method 'test005'
    self~assertSame(('aBc'), 'abc'~translate(.vot,.vit))

::method 'test006'
    self~assertSame(('14.def'), 'abcdef'~translate('123456','aaabbbcc','.'))

::method 'test007'
    self~assertSame('$$$$$$$', 'abcdef '~translate(,,'$'))

::method 'test008'
    self~expectSyntax(93.922)
    xre = 'abcdef '~translate(,,'$1')

::method 'test009'
    self~assertSame('1bEdef ', 'abcdef '~translate(1e+17,'ac','1'))

::method 'test010'
    numeric digits 100
    self~assertSame('1b0def ', 'abcdef '~translate(+1e+17,'ac','1'))

::method 'test011'
    self~expectSyntax(93.922)
    xre = 'abc'~translate(.vot,.vit,nov)

::method 'test012'
    self~expectSyntax(93.922)
    xre = nov1~translate(nov2,nov3,nov4)

::method 'test013'
    numeric digits 100
    self~assertSame('NOV', nov~translate(.vot,.vit,'$'))

::method 'test014'
    numeric digits 100
    self~assertSame('a$c', 'abc'~translate(nov,.vit,'$'))

::method 'test015'
    numeric digits 100
    self~assertSame('abc', 'abc'~translate(.vot,nov,'$'))

::method 'test016'
    self~expectSyntax(93.922)
    xre = 'abc'~translate(.vot,.vit,nov)

::method 'test017'
    self~expectSyntax(93.922)
    xre = nov1~translate(nov2,nov3,nov4)

::method 'test018'
    numeric digits 100
    self~assertSame('azcd', 'abcd'~translate('&','b')~translate('y'~translate('z','y'),'x'~translate('&','x')))

::method 'test019'
    .local~remove(vit)
    .local~remove(vot)

-- from bif.testgroup
   -- test the BIF, using examples from the documentation
::method "test_TRANSLATE"
    self~assertSame('ABCDEF', 'abcdef'~TRANSLATE())
    self~assertSame('ab2d1f', 'abcdef'~TRANSLATE('12','ec'))
    self~assertSame('12..ef', 'abcdef'~TRANSLATE('12','abcd','.'))
    self~assertSame('A Q V', 'APQRV'~TRANSLATE( ,'PR'))
    self~assertSame('APQ  ', 'APQRV'~TRANSLATE(XRANGE('00'X,'Q')))
    self~assertSame('dabc', '4123'~TRANSLATE('abcd','1234'))

::method "testStart01"
    self~assertSame(('aBC'), 'abc'~translate(,,,2))
    self~assertSame(('aBc'), 'abc'~translate(,,,2,1))
    self~assertSame(('Abc'), 'abc'~translate(,,,,1))
    self~assertSame(('a4.def'), 'abcdef'~translate('123456','aaabbbcc','.', 2, 3))
    self~assertSame('a$$def ', 'abcdef '~translate(,,'$',2,2))
    self~assertSame('a$$$$$$', 'abcdef '~translate(,,'$',2))
    self~assertSame('abcdef ', 'abcdef '~translate(,,'$',2,0))
    self~assertSame('abcdef ', 'abcdef '~translate(,,'$',8,6))

::method testStart02
    self~expectSyntax(93.924)
    x = 'abcdef '~translate(,,'$',0,6)

::method testStart03
    self~expectSyntax(93.924)
    x = 'abcdef '~translate(,,'$',"xxx",6)

::method testStart04
    self~expectSyntax(93.924)
    x = 'abcdef '~translate(,,'$',0.5,6)

::method testStart05
    self~expectSyntax(93.924)
    x = 'abcdef '~translate(,,'$',-5,6)

::method testStart06
    self~expectSyntax(93.923)
    x = 'abcdef '~translate(,,'$',1, -6)

::method testStart07
    self~expectSyntax(93.923)
    x = 'abcdef '~translate(,,'$',1, 'x')

::method testStart08
    self~expectSyntax(93.923)
    x = 'abcdef '~translate(,,'$',1, 0.5)
