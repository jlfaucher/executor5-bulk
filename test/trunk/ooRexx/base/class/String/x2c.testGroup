  parse source . . s
  group = .TestGroup~new(s)
  group~add(.String_x2cMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "String_x2cMethod.testGroup" subclass ooTestCase public

::method 'test000'
    .local~v255b = copies('D1',255)
    .local~v256b = copies('5C',256)
    .local~v32768b = copies('7E',32768)
    .local~v100000b = strip(copies('7C ',100000))
    .local~vn2 = 2
    .local~vn3 = 3
    .local~vn7 = 7
    .local~vn21 = 21
    .local~vn42 = 42

::method 'test001'
    self~expectSyntax(93.933)
    xre = '*'~x2c()

::method 'test002'
    self~assertSame('', ''~x2c())

::method 'test003'
