    XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX = copies('3',100000)
    numeric digits 9
    self~assertSame(copies('3',9)||copies('0',99991)||'.000000000000000', XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX~trunc(15))

::method 'test033'
    self~expectSyntax(93.943)
    xre=nov~trunc(5)

::method 'test034'
    self~expectSyntax(93.906)
    xre=5~trunc(nov)

::method 'test035'
    self~expectSyntax(93.943)
    xre=nov1~trunc(no.v2)

::method 'test036'
    self~expectSyntax(93.943)
    xre=nov~trunc(5)

::method 'test037'
    self~expectSyntax(93.906)
    xre=5~trunc(nov)

::method 'test038'
    self~expectSyntax(93.943)
    xre=nov1~trunc(no.v2)

::method 'test039'
    self~assertSame('77.9900', ((77.77~trunc)||'.'||99.99~trunc())~trunc(4~trunc(2)))

::method 'test040'
    .local~remove(v2)
    .local~remove(v10)
    .local~remove(v50)
    .local~remove(v60)
    .local~remove(vzeros)
    .local~remove(vnines)

