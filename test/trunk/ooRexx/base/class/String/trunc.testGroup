  parse source . . s
  group = .TestGroup~new(s)
  group~add(.String_truncMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "String_truncMethod.testGroup" subclass ooTestCase public

::method 'test000'
    .local~v2 = 2
    .local~v10 = 10
    .local~v50 = 50.00
    .local~v60 = 60.99
    .local~vzeros = copies('0',10000)
    .local~vnines = copies('9',250)

::method 'test001'
    self~assertSame('0', 0~trunc())

::method 'test002'
    self~assertSame('0.00', (-0.0067)~trunc(2))

::method 'test003'
    self~assertSame('0.00', '-0.0067'~trunc(2))

::method 'test004'
    self~assertSame('0', '-0'~trunc())

::method 'test005'
    self~assertSame('1', 000001~trunc())

::method 'test006'
    self~assertSame('5', .5E+1~trunc())

::method 'test007'
    self~assertSame('9', '     9     '~trunc())

::method 'test008'
    self~assertSame('11', '3131'x~trunc())

::method 'test009'
    self~assertSame('-4927', (-4927.99)~trunc)

::method 'test010'
    self~assertSame('50', .v50~trunc())

::method 'test011'
    self~assertSame('110', (.v50+.v60)~trunc)

::method 'test012'
    self~assertSame(42, (21.001*2)~trunc)

::method 'test013'
    self~assertSame('-2000', ('-'||'2'||'.'||'E'||'+'||'3')~trunc)

::method 'test014'
    self~expectSyntax(93.943)
    xre = 'AB.CD'~trunc()

::method 'test015'
    numeric digits 9
    self~assertSame(102939, 102938.999999~trunc())
    numeric digits 18
    self~assertSame(102939, 102938.9999999999999999~trunc())

::method 'test016'
    self~assertSame(0, .1111111111~trunc())

::method 'test017'
    numeric digits 9
    self~assertSame(1, .9999999999~trunc())
    numeric digits 18
    self~assertSame(1, .9999999999999999999~trunc())

::method 'test018'
    self~assertSame(255, '  000255  '~trunc('30'x))

::method 'test019'
    self~assertSame(256.00000, .000256E+6~trunc(' 5 '))

::method 'test020'
    numeric digits 9
    self~assertSame(32768.32770, .3276832768E+5~trunc(.005E+3))

::method 'test021'
    numeric digits 9
    self~assertSame(65536.6554000000, 65536.65536~trunc(.v10))

::method 'test022'
    numeric digits 9
    self~assertSame(65536.65540000000000000000, 65536.65536~trunc(.v10*2))

::method 'test023'
    self~expectSyntax(93.906)
    xre=100000~trunc('V')

::method 'test024'
    self~assertSame(65536.65, (          65536.65536       )~trunc(   2                   ))

::method 'test025'
    numeric digits 9
    self~assertSame(0.1111111110, .1111111111~trunc(.v10))

::method 'test026'
    numeric digits 9
    self~assertSame('1.'||copies('0',42), .9999999999~trunc(.v10+32))

::method 'test027'
    numeric digits 10
    self~assertSame(0.11111, .1111111111~trunc(.v10/.v2))

::method 'test028'
    numeric digits 10
    self~assertSame(0.1111111111, .1111111111~trunc(.v10))

::method 'test029'
    numeric digits 10
    self~assertSame('0.9999999999'||copies('0',32), .9999999999~trunc(.v10+32))

::method 'test030'
    self~assertSame('1'||copies('0',250)||'.00000', .vnines~trunc(5))

::method 'test031'
    self~assertSame('0.0000000000', .vzeros~trunc(10))

