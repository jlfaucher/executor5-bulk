   dir['DAVID'] = 'West'
   dir~setMethod('DAVID', .methods~dirMystery)
   self~assertEquals('MysteryPerson', dir['DAVID'])
   dir~unsetMethod('DAVID')
   self~assertEquals(.nil, dir['DAVID'])
   dir['DAVID'] = 'foo'
   self~assertEquals('foo', dir['DAVID'])
   dir~setMethod('DAVID', 'return "Spy"')
   self~assertEquals('Spy', dir['DAVID'])
   arr = dir~allItems()
   self~assertEquals(1, arr~hasItem('Spy'))

::method "test_16"
   dir = .directory~new()
   dir['MIKE'] = 'Shrek'
   dir['Dennis'] = 'Miller'
   sup = dir~supplier
   self~assertEquals('a Supplier', sup)
   self~assertEquals(1, sup~available)
   if sup~index = 'MIKE' then self~assertEquals('Shrek', sup~item)
   else if sup~index = 'Dennis' then self~assertEquals('Miller', sup~item)
   sup~next
   self~assertEquals(1, sup~available)
   if sup~index = 'MIKE' then self~assertEquals('Shrek', sup~item)
   else if sup~index = 'Dennis' then self~assertEquals('Miller', sup~item)
   sup~next
   self~assertEquals(0, sup~available)
   self~expectSyntax(93.937)
   sup~next

