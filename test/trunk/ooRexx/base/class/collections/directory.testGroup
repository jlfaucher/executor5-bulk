  group = .TestGroup~new(s)
  group~add(.Collection_directoryMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::method dirMystery
   -- this is a floating method to test the directory class setMethod method
   return 'MysteryPerson'

::class "Collection_directoryMethod.testGroup" subclass ooTestCase public

::method "test_1"
   dir = .directory~new()
   self~assertEquals('a Directory', dir)
   self~assertEquals(0, dir~items)
   self~assertEquals(1, dir~isEmpty)

::method "test_2"
   dir = .directory~new()
   dir['Mike'] = 'Shrek'
   self~assertEquals(0, dir~isEmpty)
   self~assertEquals(1, dir~items)
   self~assertEquals('Shrek', dir['Mike'])
   arr = .array~new
   dir['Dennis'] = arr
   self~assertEquals(2, dir~items)
   self~assertSame(arr, dir['Dennis'])
   q = .queue~new
   dir~put(q, 'Linda')
   self~assertEquals(3, dir~items)
   self~assertSame(q, dir~at('Linda'))

::method "test_3"
   dir = .directory~new()
   dir['Mike'] = 'Shrek'
   dir['Dennis'] = .array~new()
   dir~put(.queue~new(), 'Linda')
   arr = dir~allIndexes()
   self~assertEquals(3, arr~items)
   self~assertTrue(arr~equivalent(.array~of('Mike', 'Dennis', 'Linda')))

::method "test_4"
   dir = .directory~new()
   dir~setEntry('Mike', 'Shrek')
   arr = .array~new
   dir['Dennis'] = arr
   queue = .queue~new
   dir~put(queue, 'Linda')
   items = dir~allItems()
   self~assertEquals(3, items~items)
   self~assertTrue(items~equivalent(.array~of('Shrek', arr, queue)))

::method "test_5"
   dir = .directory~new()
   dir['Mike'] = 'Shrek'
   dir['Dennis'] = .array~new()
   dir~put(.queue~new(), 'Linda')
   self~assertEquals(3, dir~items)
   dir~empty
   self~assertEquals(0, dir~items)

