::method "test_load_via_classmethod"
  self~internal_setup
  str=.stream~new(.testData~files[1])
  props=.properties~load(str)
  self~assertEquals(2, props~items, "subtest_01 - using class method 'load'")

  s=.testData~dirData~supplier   -- were the entries retrieved correctly?
  n=1
  do while s~available
     n=n+1
     self~assertTrue(props~hasIndex(s~index))
     self~assertSame(s~item, props[s~index])
     s~next
  end
  str~close
  self~internal_tearDown


-- 'load' class method loading .File instance
::method "test_properties_loadclass_file"
  self~internal_setup
  p = .Properties~load(.File~new(.testData~files[1]))
  self~assertEquals(2, p~items)
  do with index index item item over .testData~dirData
    self~assertTrue(p~hasIndex(index))
    self~assertSame(item, p[index])
  end
  self~internal_tearDown

-- 'load' instance method loading .File instance
::method "test_properties_load_file"
  self~internal_setup
  p = .Properties~new
  p~load(.File~new(.testData~files[1]))
  self~assertEquals(2, p~items)
  do with index index item item over .testData~dirData
    self~assertTrue(p~hasIndex(index))
    self~assertSame(item, p[index])
  end
  self~internal_tearDown

-- 'save' instance method saving to .File instance
::method "test_properties_save_file"

  self~internal_setup

  -- build Property and Array instance from test data, save Property instance
  f = .File~new(.testData~files[2])
  p = .Properties~new
  a = .Array~new
  do with index name item value over .testData~dirData
    p[name] = value
    a~append(name"="value)
  end
  p~save(f)

  -- manually read saved file, and compare with Array
  s = .Stream~new(f)
  s~open("read shared")
  self~assertSameList(a, s~arrayIn)
  s~close

  self~internal_tearDown


::method "test_load_and_save_via_instanceMethod_using_Stream_Objects"
  self~internal_setup

  str=.stream~new(.testData~files[1])
  props=.properties~new
  props~load(str)
  self~assertEquals(2, props~items, "subtest_01 - using class method 'load'")

  s=.testData~dirData~supplier   -- were the entries retrieved correctly?
  n=1
  do while s~available
     n=n+1
     self~assertTrue(props~hasIndex(s~index))
     self~assertSame(s~item, props[s~index])
     s~next
  end
  str~close

   -- save properties with property file
  str2=.stream~new(.testData~files[2])~~open("REPLACE")
  props~save(str2)
  str2~close

  str2=.stream~new(.testData~files[2])
  props2=.properties~new~~load(str2)
  str2~close

  n=0
  do idx over props
     n=n+1
     val1=props[idx]
     val2=props2[idx]
     self~assertEquals(val1, val2)
  end
  self~internal_tearDown


