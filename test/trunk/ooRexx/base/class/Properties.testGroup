::method "test_get_and_set_properties"
  props=.properties~new
  key="rgf"
  val=1
  logVal="true"


  self~assertNull(props~getProperty(key))

  props~setProperty(key, val)
  self~assertEquals(val, props~getProperty(key))
  self~assertEquals(val, props~getWhole(key))

  props~setLogical(key, val)
  self~assertEquals(logVal, props~getProperty(key))
  self~assertEquals(val, props~getLogical(key))

  props~setWhole(key, val)
  self~assertEquals(val, props~getProperty(key))
  self~assertEquals(val, props~getWhole(key))

  props~setLogical(key, val)
  self~assertEquals(logVal, props~getProperty(key))
  self~assertEquals(val, props~getLogical(key))


  key="rgf"
  val=0
  logVal="false"
  props~setProperty(key, val)
  self~assertEquals(val, props~getProperty(key))
  self~assertEquals(val, props~getWhole(key))

  props~setLogical(key, val)
  self~assertEquals(logVal, props~getProperty(key))
  self~assertEquals(val, props~getLogical(key))

  props~setWhole(key, val)
  self~assertEquals(val, props~getProperty(key))
  self~assertEquals(val, props~getWhole(key))

  props~setLogical(key, val)
  self~assertEquals(logVal, props~getProperty(key))
  self~assertEquals(val, props~getLogical(key))


