::class CollectionNewSize.testGroup subclass ooTestCase public

-- tests for [feature-requests:#604] Allow collections other than array to accept an initial size 

::method test_collection_new_2_args
  self~expectSyntax(93.902)
  self~collection~new(.nil, .nil)

::method test_collection_new_arg_1_nil
  self~expectSyntax(93.923)
  self~collection~new(.nil)

::method test_collection_new_arg_1_notnumeric
  self~expectSyntax(93.923)
  self~collection~new("string")

::method test_collection_new_arg_1_notwhole
  self~expectSyntax(93.923)
  self~collection~new(1.0001)

::method test_collection_new_arg_1_negative
  self~expectSyntax(93.923)
  self~collection~new(-1)

::method test_collection_new
  -- we'll test initial size values of 0 .. 25, 100, 1000, 10000, and 100000
  -- we cannot really check the allocated size (only Array and CircularQueue
  -- provide a 'size' method), so we only test for 'isEmtpy' and 'items' = 0 
  do size = 0 to 25
    c = self~collection~new(size)
    self~assertTrue(c~isEmpty)
    self~assertEquals(0, c~items)
  end
  do power = 2 to 5
    c = self~collection~new(10 ** power)
    self~assertTrue(c~isEmpty)
    self~assertEquals(0, c~items)
  end
