  group = .TestGroup~new(fileSpec)
--group~add(.ArrayNewSize.testGroup)           we assume Array already tests this
  group~add(.BagNewSize.testGroup)
--group~add(.CircularQueueNewSize.testGroup)   we assume CircularQueue already tests this
  group~add(.DirectoryNewSize.testGroup)
  group~add(.IdentityTableNewSize.testGroup)
  group~add(.ListNewSize.testGroup)
  group~add(.PropertiesNewSize.testGroup)
  group~add(.QueueNewSize.testGroup)
  group~add(.RelationNewSize.testGroup)
  group~add(.SetNewSize.testGroup)
--group~add(.StemNewSize.testGroup)            we assume Stem already tests this
  group~add(.StringTableNewSize.testGroup)
  group~add(.TableNewSize.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult
