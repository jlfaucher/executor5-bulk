::METHOD "testGetBufferSize"
   b = .mutableBuffer~new("")
   self~assertEquals("Buffer size incorrect 1",256,b~getBufferSize)
   b = .mutableBuffer~new("",1)
   self~assertEquals("Buffer size incorrect 2",1,b~getBufferSize)
   b~append("  ")
   self~assertEquals("Buffer size incorrect 3",2,b~getBufferSize)

::METHOD "testSetBufferSize"
   b = .mutableBuffer~new("1234567890")
   b~setBufferSize(5)
   self~assertEquals("Buffer not truncated","12345",b~string)
   self~assertEquals("Buffer returning wrong buffer size",5,b~getBufferSize)

   b = .mutablebuffer~new("123")
   b~setBufferSize(0)
   self~assertEquals("MutableBuffer string should be empty string","",b~string)
   self~assertEquals("MutableBuffer buffer size should be 256 after setting to 0",256,b~getBufferSize)

   b = .mutablebuffer~new("My local work")
   b~setBufferSize(109873451)
   self~assertEquals("Set buffer to large size, string should not change","My local work",b~string)
   self~assertEquals("Buffer size should be 109873451 after setting to 109873451",109873451,b~getBufferSize)

