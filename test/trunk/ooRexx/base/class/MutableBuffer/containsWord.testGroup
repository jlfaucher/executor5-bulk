  parse source . . s
  group = .TestGroup~new(s)
  group~add(.Mutablebuffer_containsWord.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "Mutablebuffer_containsWord.testGroup" subclass ooTestCase public

::method test001
  m001=.mutablebuffer~new('To Be or not to be THAT is the')
  self~assertSame('1',m001~containsWord('To',,))

