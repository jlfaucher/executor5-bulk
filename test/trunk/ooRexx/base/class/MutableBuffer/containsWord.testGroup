::method test022
  m022=.mutablebuffer~new('To be or not to be')
  Call blank2tab m022
  self~assertSame('1',m022~containsWord('be',3,))

::routine blank2tab
  Use Arg mb
  tab='09'x
  Do i=1 To 10
    p=mb~string~pos(' ')
    If p=0 Then Leave
    mb[p,1]=tab
    End
