  parse source . . s
  group = .TestGroup~new(s)
  group~add(.MutableBuffer_changeStr.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "MutableBuffer_changeStr.testGroup" subclass ooTestCase public

::method "test_1"
   self~assertSame('101100', .mutablebuffer~new('101100')~CHANGESTR('','X')~string)

::method "test_2"
   self~assertSame('', .mutablebuffer~new('')~CHANGESTR('1','X')~string)

::method "test_4"
   self~assertSame('ha-lo', .mutablebuffer~new('hallo')~CHANGESTR('l','-',1)~string)

::method "test_5"
   self~assertSame('ha--o', .mutablebuffer~new('hallo')~CHANGESTR('l','-',2)~string)

::method "test_6"
   self~assertSame('ha--o', .mutablebuffer~new('hallo')~CHANGESTR('l','-',3)~string)

-- rexxref documentation tests

::method "test_101"
   self~assertSame('000', .mutablebuffer~new('101100')~CHANGESTR('1',"")~string)

::method "test_102"
   self~assertSame('X0XX00', .mutablebuffer~new('101100')~CHANGESTR('1','X')~string)

::method "test_CHANGESTR"
   -- new tests
    self~assertSame('101100', .mutablebuffer~new('101100')~changestr('','X')~string)
    self~assertSame('', .mutablebuffer~new('')~changestr('1','X')~string)

   -- new tests: optional, trailing "count" argument
    self~assertSame('ha-lo', .mutablebuffer~new('hallo')~changeStr('l','-',1)~string)
    self~assertSame('ha--o', .mutablebuffer~new('hallo')~changeStr('l','-',2)~string)
    self~assertSame('ha--o', .mutablebuffer~new('hallo')~changestr('l','-',3)~string)

::method test_count_zero
   self~assertSame("Test", .MutableBuffer~new("Test")~changeStr("t", "-", 0))

::method test_count_negative
   self~expectSyntax(93.906) -- Method argument .. must be zero or a positive whole number
   .MutableBuffer~new("Test")~changeStr("t", "-", -1)

::method test_changestr_no_args
   self~expectSyntax(93.903) -- Missing argument in method; argument 1 is required
   .MutableBuffer~new("")~changeStr

::method test_changestr_one_arg
   self~expectSyntax(93.903) -- Missing argument in method; argument 2 is required
   .MutableBuffer~new("")~changeStr("")

::method test_changestr_four_args
   self~expectSyntax(93.902) -- Too many arguments in invocation of method; 3 expected
   .MutableBuffer~new("")~changeStr("", "", 0, .nil)

::method test_changestr_needle_nullstring
  string = "string"
  m = .MutableBuffer~new(string)
  self~assertSame(string, m~changeStr("", ""))
  self~assertSame(string, m~changeStr("", "", 0))
  self~assertSame(string, m~changeStr("", "", 1))
  self~assertSame(string, m~changeStr("", "newneedle"))
  self~assertSame(string, m~changeStr("", "newneedle", 0))
  self~assertSame(string, m~changeStr("", "newneedle", 1))

-- changeStr() has three code paths which we test here:
--   needle and newneedle are of the same length
--   newneedle is shorter than needle: result string will get shorter
--   newneedle is longer than needle: result string will get longer
::method test_changestr_needles_three_paths
  str = "birdbird1bird"
  needle = "bird"
  do newNeedle over "", "cat", "fish", "mouse"
    do string over str, str || "_", "_" || str, "_" || str || "_"
      m = .MutableBuffer~new(string)
      -- use the changeStr() BIF (with a very different implementation) as reference
      self~assertSame(changeStr(needle, string, newNeedle), m~changeStr(needle, newNeedle))
      do count = 0 to 4
        m = .MutableBuffer~new(string)
        self~assertSame(changeStr(needle, string, newNeedle, count), m~changeStr(needle, newNeedle, count))
      end
    end
  end


