-- test various concatenations with non-string objects on
-- the left of the expression.  This will concat with the
-- string value of the object.
::method test_concat
  obj = .object~new
  self~assertEquals(obj~defaultName||"ABC", obj||"ABC")
  self~assertEquals(obj~defaultName||"ABC", obj"ABC")
  self~assertEquals(obj~defaultName||" ABC", obj "ABC")

  -- and object with a string method override
  obj = .test1~new

  self~assertEquals(obj~string||"ABC", obj||"ABC")
  self~assertEquals(obj~string||"ABC", obj"ABC")
  self~assertEquals(obj~string||" ABC", obj "ABC")

::method test_concat_no_other
  obj = .test1~new
  self~expectSyntax(93.903)
  x = obj~"||"

::method test_blank_concat_no_other
  obj = .test1~new
  self~expectSyntax(93.903)
  x = obj~" "

::method test_abuttal_concat_no_other
  obj = .test1~new
  self~expectSyntax(93.903)
  x = obj~""

::method test_concat_extra_arg
  obj = .test1~new
  self~expectSyntax(93.902)
  x = obj~"||"(1,2)

::method test_blank_concat_extra_arg
  obj = .test1~new
  self~expectSyntax(93.902)
  x = obj~" "(1,2)

::method test_abbutal_concat_extra_arg
