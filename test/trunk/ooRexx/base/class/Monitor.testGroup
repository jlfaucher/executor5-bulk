  parse source . . fileSpec

  group = .TestGroup~new(fileSpec)
  group~add(.Monitor.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult
-- End of entry point.

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "Monitor.testGroup" subclass ooTestCase public

::method 'test_currentA'
    expected = .stdout
    self~assertEquals(expected, .output~current)

::method 'test_currentB'
    expected = 'STDOUT'
    self~assertEquals(expected, .output~current)

::method 'test_ZdestinationA'  -- make these be the last tests (Z)
    o_stream = .stream~new('my.new1')
    o_stream~open('Write Replace Nobuffer')
    .local~setentry("output",.monitor~new(o_stream))
    say .output~current
    linesInStream = o_stream~lines
    .output~destination(.stdout)
    o_stream~close
    -- Clean Up now in case assert fails
    if o_stream~query('exists') \= '' then
        call SysFileDelete('my.new1')
    expected = 1
    self~assertEquals(expected, linesInStream)
    self~assertEquals("STDOUT", .output~current, 'Output destination should be back to stdout')

::method 'test_ZdestinationB'
    o_stream = .stream~new('my.new2')
    o_stream~open('Write Replace Nobuffer')
    .local~setentry("output",.monitor~new(o_stream))
    say .output~current
    linesInStream = o_stream~lines
    .output~destination(.stdout)
    the_line = o_stream~linein
    o_stream~close
    -- Clean Up now in case assert fails
    if o_stream~query('exists') \= '' then
        call SysFileDelete('my.new2')
    expected = 'my.new2'
    self~assertEquals(expected, the_line)
    self~assertEquals("STDOUT", .output~current, 'Output destination should be back to stdout')


::options novalue error
