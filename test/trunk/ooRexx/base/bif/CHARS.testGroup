  parse source . . s
  group = .TestGroup~new(s)
  group~add(.CHARS.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult


::requires 'ooTest.frm' -- load the ooRexxUnit classes
::requires 'FileUtils.cls'

::class "CHARS.testGroup" subclass ooTestCase public

::attribute charsTestingFile

::method setup
  self~charsTestingFile = .nil

::method tearDown
  fileName = self~charsTestingFile
  if fileName \== .nil then do
    -- Close the file and delete it
    ret = stream(fileName, 'C', "close")
    j = deleteFile(fileName)
  end

-- Tests that chars gives correct answer for existing file, but not opened, and
-- non-existent file
::method "test_1"

  l = "12345678901234567890"           -- 20 chars
  len = l~length + .endOfLine~length   -- end of line character count

  src = .array~of(l)
  fileName = createFile(src, "delMe.test_chars_test1")
  self~assertTrue(fileName \== "")

  self~assertSame(len, chars(fileName))

  -- See if we get the correct answer twice in a row.
  self~assertSame(len, chars(fileName))

  -- Close the file and delete it
  ret = lineout(fileName)
  self~assertSame(0, ret)
  j = deleteFile(fileName)

  self~assertSame(0, chars(fileName))

-- Tests chars() for an existing, 0-length file.
::method 'test_2'

  -- Create an empty file.
  fileName = 'foos.deleteMe'
  r = stream(fileName, 'C', "open nobuffer")
  r = stream(fileName, 'C', "close")
  self~assertTrue(SysFileExists(fileName))
  self~charsTestingFile = fileName

  self~assertSame(0, chars(fileName))

