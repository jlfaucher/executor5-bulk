-- Tests using an extra argument with an existing file.
::method test_file_wrong_syntax

  fileName = createFile(.array~of("123456"), "delMe.test_chars_tests")
  self~assertTrue(fileName \== "")
  self~charsTestingFile = fileName

  self~expectSyntax(40.4)
  self~assertSame(0, chars(fileName, "cat"))

-- Tests with a biggish file
::method "test_manyChars"

  l = "12345678901234567890"           -- 20 chars
  len = l~length + .endOfLine~length   -- end of line character count

  l2 = l~copies(1024 * 1024)
  expected = (20 * 1024 * 1024) + .endOfLine~length

  src = .array~of(l, l2)
  fileName = createFile(src, "delMe.test_chars_manyChars")
  self~assertTrue(fileName \== "")
  self~charsTestingFile = fileName

  -- Read in the first line from the file, should be equal to l
  j = linein(fileName)
  self~assertSame(l, j)

  -- Now expected is the total length of l2
  self~assertSame(expected, chars(fileName))


-- Tests with a biggish file and non-buffered
::method "test_manyChars_nb"

  l = "12345678901234567890"           -- 20 chars
  len = l~length + .endOfLine~length   -- end of line character count

  l2 = l~copies(1024 * 1024)
  expected = (20 * 1024 * 1024) + .endOfLine~length

  src = .array~of(l, l2)
  fileName = createFile(src, "delMe.test_chars_manyChars")
  self~assertTrue(fileName \== "")
  self~charsTestingFile = fileName

  ret = stream(fileName, 'C', "open nobuffer")
  self~assertSame("READY:", ret)

  -- Read in the first line from the file, should be equal to l
  j = linein(fileName)
  self~assertSame(l, j)

  -- Now expected is the total length of l2
  self~assertSame(expected, chars(fileName))


-- Tests with a biggish file and binary mode
::method "test_manyChars_bin"

  l = "12345678901234567890"           -- 20 chars
  l_len = l~length + .endOfLine~length   -- end of line character count

  l2 = l~copies(1024)
  l2_len = (20 * 1024) + .endOfLine~length

  src = .array~of(l, l2)
  fileName = createFile(src, "delMe.test_chars_manyCharsBin")
  self~assertTrue(fileName \== "")
  self~charsTestingFile = fileName

  recLength = 14
  ret = stream(fileName, 'C', "open binary reclength" recLength)
  self~assertSame("READY:", ret)

  total_len = l_len + l2_len
  read = 0
  do while chars(fileName) > recLength
    j = linein(fileName)
    self~assertSame(recLength, j~length)
    read += 14
    expected = total_len - read
    self~assertSame(expected, chars(fileName))
  end

::method test_chars_multiple_moves

  l = "12345678901234567890"           -- 20 chars
  len = l~length + .endOfLine~length   -- end of line character count
  src = .array~new(30)
  do i = 1 to 30
    src[i] = l
  end

  fileName = createFile(src, "delMe.test_chars_multipleMoves")
  self~assertTrue(fileName \== "")
  self~charsTestingFile = fileName

  total_len = 30 * len
  ret = stream(fileName, 'C', "open both")

  ret = chars(fileName)
  self~assertSame(total_len, ret)

  ret = charin(fileName, total_len, 0)
  self~assertSame("", ret)

  ret = chars(fileName)
  self~assertSame(1, ret)

  discard = charin(fileName)
  ret = chars(fileName)
  self~assertSame(0, ret)

  ret = charin(fileName, 40, 0)
  self~assertSame("", ret)

  ret = chars(fileName)
  self~assertSame(total_len - 40 + 1, ret)

  discard = linein(fileName)  -- Eats the last of line 2
  do 2
    discard = linein(fileName)
  end

  ret = chars(fileName)
  self~assertSame(total_len - (4 * len), ret)

