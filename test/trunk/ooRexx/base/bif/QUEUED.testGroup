  parse source . . s
  group = .TestGroup~new(s)
  group~add(.QUEUED.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

-- class named exactly like file
::class "QUEUED.testGroup" subclass ooTestCase public

::method 'test000'
-- clear the queue
    do i = 1 to queued()
        pull queued(i)
    end

::method 'test001'
    self~expectSyntax(40.4)
    xre = queued('an argument is invalid')

::method 'test002'
    self~assertSame(0, queued())

::method 'test003'
    push 'A pushed line'
    self~assertSame(1, queued())

::method 'test004'
    push 'A queue-d line'
    self~assertSame(2, queued())

::method 'test005'
    do i = 1 To 1000
        push 'A queue-d line'
    end
    self~assertSame(1002, queued())

::method 'test006'
    z = queued()
    do i = 1 to z
        pull answer .
    end
    self~assertSame(0, queued())

::method 'test007'
    self~expectSyntax(40.4) -- Too many arguments in invocation of QUEUED; maximum expected is 0
    xre = queued(1)


::options novalue error
