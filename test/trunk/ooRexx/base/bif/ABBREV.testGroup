::method "test_20"
   s="XRANGE"('00'x,'FF'x)
   Do i=0 To 256
      s30="SUBSTR"(s,1,30)
      t="SUBSTR"(s,1,i)
      i1="MAX"(i-1,0)
      i2=i+1
      self~assertSame("subTest20-"i'-1', .true, ABBREV(s, t, i1))
      self~assertSame("subTest20-"i'-2', .true, ABBREV(s, t, i))
      self~assertSame("subTest20-"i'-3', .false, ABBREV(s, t, i2))
