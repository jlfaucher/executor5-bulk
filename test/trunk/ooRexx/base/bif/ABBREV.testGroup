::method "test_6"
   s="XRANGE"('00'x,'FF'x)
   Do i=0 To 256
      s30="SUBSTR"(s,1,30)
      t="SUBSTR"(s,1,i)
      self~assertSame("subTest6-"i, .true, ABBREV(s, t))
      r="ABBREV"(s30,t)
      If i<=30 Then
         self~assertSame("subTest6-"i, .true, ABBREV(s30, t))
      Else                 /* longer string is never abbrev of shorter */
         self~assertSame("subTest6-"i, .false, ABBREV(s30, t))
      End

::method "test_7"
