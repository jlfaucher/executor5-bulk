-- Tests repeated writes using different character counts
::method test_write_char_strings

  fileName = "delMe.test_charout_writingA"
  self~charOutTestingFile = fileName

  ret = stream(fileName, 'C', "open")
  self~assertSame("READY:", ret)

  strA = 'a'~copies(511)
  strB = 'b'~copies(514)
  strC = 'c'~copies(512)
  strD = 'd'~copies(513)
  strE = 'e'~copies(509)
  strF = 'f'~copies(1025)
  strG = 'g'~copies(513)
  strH = 'h'~copies(514)

  writes = .array~of(strA, strB, strC, strD,strE, strF,strG, strH)
  i = 0
  do 2
    do w over writes
      i += 1
      ret = charout(fileName, w)
      self~assertSame(0, ret, 'iteration' i)
    end
  end

  ret = charin(fileName, 1, 0)
  self~assertSame("", ret)

  i = 0
  do 2
    do w over writes
      i += 1
      len = w~length
      strX = charin(fileName, , len)
      self~assertSame(len, strX~length, 'iteration' i)
      self~assertSame(w, strX, 'iteration' i)
    end
  end

-- Tests repeated writes mixed with position changes
::method test_write_mixed_char_strings

  fileName = "delMe.test_charout_writingB"
  self~charOutTestingFile = fileName

  ret = stream(fileName, 'C', "open")
  self~assertSame("READY:", ret)

  strA = 'a'~copies(511)
  strB = 'b'~copies(514)
  strC = 'c'~copies(512)
  strD = 'd'~copies(513)
  strE = 'e'~copies(509)
  strF = 'f'~copies(1025)
  strG = 'g'~copies(513)
  strH = 'h'~copies(514)

  strX = 'X'~copies(10)

  writes = .array~of(strA, strB, strC, strD,strE, strF,strG, strH)
  i = 0
  pos = 1
  do 2
    do w over writes
      i += 1
      ret = charout(fileName, w, pos)
      self~assertSame(0, ret, 'iteration' i)
      pos += w~length

      if i > 1 then do
        p = ((i - 1) * 512) - 5 + 1
        ret = charout(fileName, strX, p)
        self~assertSame(0, ret, 'iteration' i 'X')
      end
    end
  end

  -- Reposition to start of file.
  ret = charin(fileName, 1, 0)
  self~assertSame("", ret)

  expected = strA~overlay("XXXXX", 508)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strB~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strC~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strD~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strE~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strF~overlay("XXXXX", 1)~overlay("XXXXXXXXXX", 508)~overlay("XXXXX", 1020)~left(1024)
  ret = charin(fileName, , 1024)
  self~assertSame(expected, ret)

  expected = strG~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)

  expected = strH~overlay("XXXXX", 1)~overlay("XXXXX", 508)~left(512)
  ret = charin(fileName, , 512)
  self~assertSame(expected, ret)


