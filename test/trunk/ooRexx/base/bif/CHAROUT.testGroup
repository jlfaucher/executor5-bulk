-- Test writing at a position past the end of the file.
::method test_positioning_pastEnd

  str = '1234567890'
  fileName = createFile(.array~of(str), "delMe.test_charout_postioning2")
  self~assertTrue(fileName \== "")
  self~charOutTestingFile = fileName

  nulStr = 0~d2c~copies(10)
  len = str~length + .endOfLine~length + nulStr~length
  pos = len + 1
  ret = charout(fileName, "X", pos)
  self~assertSame(0, ret)

  -- We added an X, so len needs to increment (could also use pos)
  len +=1

  -- close file
  ret = charout(fileName)
  self~assertSame(0, ret)

  ret = stream(fileName, 'C', 'query size')
  self~assertSame(len, ret)

  ret = charin(fileName, , len)
  self~assertSame(str || .endOfLine || nulStr || "X", ret)

