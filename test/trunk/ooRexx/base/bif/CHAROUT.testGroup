  parse source . . s
  group = .TestGroup~new(s)
  group~add(.CHAROUT.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult


::requires 'ooTest.frm' -- load the ooRexxUnit classes
::requires 'FileUtils.cls'

::class "CHAROUT.testGroup" subclass ooTestCase public

::attribute charOutTestingFile

::method setup
  self~charOutTestingFile = .nil

::method tearDown
  fileName = self~charOutTestingFile
  if fileName \== .nil then do
    -- Close the file and delete it
    ret = stream(fileName, 'C', "close")
    j = deleteFile(fileName)
  end

-- Basic does it work test
::method test_simple
  fileName = 'delMe_charoutSimple'
  self~charOutTestingFile = fileName

  characters = .array~new
  do i = 97 to 122
    characters~append(i~d2c)
  end

  do c over characters
    ret = charout(fileName, c)
    self~assertSame(0, ret)
  end

  ret = stream(fileName, 'C', 'close')
  self~assertSame("READY:", ret)

  do i = 1 to 26
    ch = charin(fileName)
    self~assertSame(characters[i], ch)
  end

-- Tests reported position after charout null or charout chars
::method test_pos
  fileName = 'delMe_charoutPos'
  self~charOutTestingFile = fileName

  ret = stream(fileName, 'C', "open"  )
  self~assertSame("READY:", ret)

  pos = stream(fileName, 'C', "query position write char")
  self~assertSame(1, pos)

  -- charout of null string should not move the write position
  do i = 1 to 5000
    ret = charout(fileName, "")
  end

  ret = stream(fileName, 'C', "query position write char")
  self~assertSame(pos, ret)

  -- charout of a single char 5,000 times should move the write position to
  -- 5,000 + 1
  do i = 1 to 5000
    ret = charout(fileName, "A")
    pos += 1
  end
  ret = stream(fileName, 'C', "query position write char")
  self~assertSame(pos, ret)

  -- size should equal the number of chars written.
  ret = stream(fileName, 'C', "query size")
  self~assertSame(pos - 1, ret)


-- Tests outputting a large amount of chars.
::method test_many_chars
  fileName = 'delMe_many_chars'
  self~charOutTestingFile = fileName

  ret = stream(fileName, 'C', "open"  )
  self~assertSame("READY:", ret)

  str = '12345678901234567890'
  size = 20 * 10 * 1024 * 1024
  buf = .MutableBuffer~new(str~copies(10 * 1024 * 1024), size)
  characters = buf~string

  ret = charout(fileName, characters)
  self~assertSame(0, ret)
  ret = stream(fileName, 'C', 'query size')
  self~assertSame(size, ret)

-- Tests charout to stdout. However, a Rexx program is run in a separate process,
-- (by execRexxPrg()) and the output of that program is redirected into a file.
-- This test is really only valid to catch what is output, not the return code.
-- The next test, test_stdout_ret2() is needed to check the return.
::method test_stdout_ret

  src = .array~new
  src[1] = 'ret = charout( , "HELLO")'
  --src[2] = 'say "ret:" ret'
  src[2] = 'return ret'
  fileName = createRexxPrgFile(src, "delMe.test_charin_stdout")
  self~assertTrue(fileName \== "")
  self~charOutTestingFile = fileName

  output = .array~new
  ret = execRexxPrg(fileName, output)

  -- assert that exactly HELLO was output
  self~assertSame(1, output~items)
  self~assertSame("HELLO", output[1])
  self~assertSame(0, ret)

-- Tests the return from charout() to the console.
::method test_stdout_ret2
  ret = charout( , "     ")
  self~assertSame(0, ret)

