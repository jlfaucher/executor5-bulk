-- Tests reported position after charout null or charout chars
::method test_pos
  fileName = 'delMe_charoutPos'
  self~charOutTestingFile = fileName

  ret = stream(fileName, 'C', "open")
  self~assertSame("READY:", ret)

  pos = stream(fileName, 'C', "query position write char")
  self~assertSame(1, pos)

  -- charout of null string should not move the write position
  do i = 1 to 5000
    ret = charout(fileName, "")
  end

  ret = stream(fileName, 'C', "query position write char")
  self~assertSame(pos, ret)

  -- charout of a single char 5,000 times should move the write position to
  -- 5,000 + 1
  do i = 1 to 5000
    ret = charout(fileName, "A")
    pos += 1
  end
  ret = stream(fileName, 'C', "query position write char")
  self~assertSame(pos, ret)

  -- size should equal the number of chars written.
  ret = stream(fileName, 'C', "query size")
  self~assertSame(pos - 1, ret)


