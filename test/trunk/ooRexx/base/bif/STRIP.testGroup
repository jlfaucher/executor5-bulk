::method "test_STRIP"
    self~assertSame('ab c', STRIP('  ab c  '))
    self~assertSame('ab c  ', STRIP('  ab c  ','L'))
    self~assertSame('  ab c', STRIP('  ab c  ','t'))
    self~assertSame('12.7', STRIP('12.7000', ,0))
    self~assertSame('12.7', STRIP('0012.700', ,0))

   -- new tests
