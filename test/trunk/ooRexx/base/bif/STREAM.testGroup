-- Tests the command 'query' option, with an existing file, not yet opened.
::method test_queryFile_exists_notOpen

  fileName = createFile(.array~of('1234567890'), "delMe.test_stream_query")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  -- We just created the file, date and timestamp should be now.
  parse value .DateTime~new~isoDate with d 'T' t '.' .
  eTimeStamp = d t
  eDateTime = d~substr(6) || '-' || d~substr(3, 2) t
  eSize = '1234567890'~length + .endOfLine~length

  ret = stream(fileName, 'c', 'query datetime')
  self~assertSame(eDateTime, ret)

  ret = stream(fileName, 'c', 'query exists')
  self~assertSame(fileName, ret)

  ret = stream(fileName, 'c', 'query handle')
  self~assertSame("", ret)

  ret = stream(fileName, 'c', 'query seek')
  self~assertSame("", ret)

  ret = stream(fileName, 'c', 'query position')
  self~assertSame("", ret)

  ret = stream(fileName, 'c', 'query size')
  self~assertSame(eSize, ret)

  ret = stream(fileName, 'c', 'query streamtype')
  self~assertSame("UNKNOWN", ret)

  ret = stream(fileName, 'c', 'query timestamp')
  self~assertSame(eTimeStamp, ret)

-- Tests the command 'query' option, with an existing file, after stream is
-- opened.  Query position in separate method
::method test_queryFile_exists_opened_01

  fileName = createFile(.array~of('1234567890'), "delMe.test_queryFile_exists_opened01")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  -- Open the file.
  ret = linein(fileName, 1, 0)
  self~assertSame("", ret)

  -- We just created the file, date and timestamp should be now.
  parse value .DateTime~new~isoDate with d 'T' t '.' .
  eTimeStamp = d t
  eDateTime = d~substr(6) || '-' || d~substr(3, 2) t
  eSize = '1234567890'~length + .endOfLine~length

  ret = stream(fileName, 'c', 'query datetime')
  self~assertSame(eDateTime, ret)

  ret = stream(fileName, 'c', 'query exists')
  self~assertSame(fileName, ret)

  -- The handle is almost for sure 3, but probably can't rely on that 100%
  ret = stream(fileName, 'c', 'query handle')
  self~assertTrue(ret~datatype('W'))
  self~assertTrue(ret > 0)

  ret = stream(fileName, 'c', 'query size')
  self~assertSame(eSize, ret)

  ret = stream(fileName, 'c', 'query streamtype')
  self~assertSame("PERSISTENT", ret)

  ret = stream(fileName, 'c', 'query timestamp')
  self~assertSame(eTimeStamp, ret)


-- Tests the command 'query position read' option, with an existing file, after
-- the stream is opened.
::method test_queryFile_exists_opened_02

  fileName = createFile(.array~of('1234567890'), "delMe.test_queryFile_exists_opened02")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  -- Open the file.
  ret = linein(fileName, 1, 0)
  self~assertSame("", ret)

  -- We haven't moved, so read should be at position 1 for everything.  Read
  -- is the default for files opened read / write.  (As we opened this file.)
  ret = stream(fileName, 'c', 'query position')
  self~assertSame(1, ret)

  -- seek is a synonym for position, so we should always get the same return.
  ret2 = stream(fileName, 'c', 'query seek')
  self~assertSame(ret, ret2)

  ret = stream(fileName, 'c', 'query position read')
  self~assertSame(1, ret)
  ret2 = stream(fileName, 'c', 'query seek read')
  self~assertSame(ret, ret2)

  ret = stream(fileName, 'c', 'query position read char')
  self~assertSame(1, ret)
  ret2 = stream(fileName, 'c', 'query seek read char')
  self~assertSame(ret, ret2)

  ret = stream(fileName, 'c', 'query position read line')
  self~assertSame(1, ret)
  ret2 = stream(fileName, 'c', 'query seek read line')
  self~assertSame(ret, ret2)


-- Tests the command 'query position write' option, with an existing file, after
-- the stream is opened.
::method test_queryFile_exists_opened_03

  fileName = createFile(.array~of('1234567890'), "delMe.test_queryFile_exists_opened03")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  -- Open the file.
  ret = linein(fileName, 1, 0)
  self~assertSame("", ret)

  -- Calculate the number of characters in the file.
  charSize = '1234567890'~length + .endOfLine~length

  -- Write should be positioned at the end of the file.
  ret = stream(fileName, 'c', 'query position write')
  self~assertSame(charSize + 1, ret)
  ret2 = stream(fileName, 'c', 'query seek write')
  self~assertSame(ret, ret2)

  ret = stream(fileName, 'c', 'query position write char')
  self~assertSame(charSize + 1, ret)
  ret2 = stream(fileName, 'c', 'query seek write char')
  self~assertSame(ret, ret2)

  ret = stream(fileName, 'c', 'query position write line')
  self~assertSame(2, ret)
  ret2 = stream(fileName, 'c', 'query seek write line')
  self~assertSame(ret, ret2)

-- Tests the command 'query position sys' option, with an existing file, after
-- the stream is opened.
::method test_queryFile_exists_opened_04

  fileName = createFile(.array~of('1234567890'), "delMe.test_queryFile_exists_opened04")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  -- Open the file.
  ret = linein(fileName, 1, 0)
  self~assertSame("", ret)

  -- Calculate the number of characters in the file.
  charSize = '1234567890'~length + .endOfLine~length

  -- The system position should 0, we haven't done anything. (IS this true for
  -- ALL OSes?)
  ret = stream(fileName, 'c', 'query position sys')
  self~assertSame(0, ret)

  do i = 1 to charSize
    discard = charin(fileName)
    self~assertNotSame("", discard)

    rexxPos = stream(fileName, 'c', 'query position')
    sysPos = stream(fileName, 'c', 'query position sys')
    self~assertSame(i + 1, rexxPos, "iteration" i)
    self~assertSame(i, sysPos, "iteration" i)
  end

  -- Close the file and delete it
  j = lineout(fileName)
  j = deleteFile(fileName)

  -- Now create an empty file.
  fileName = 'deleteMe.queryFile_sys'
  r = stream(fileName, 'C', "open nobuffer")
  r = stream(fileName, 'C', "close")
  self~assertTrue(SysFileExists(fileName))
  self~streamTestingFile = fileName

  -- Stream's not open, return empty string
  ret = stream(fileName, 'C', "query position sys")
  self~assertTrue("" == ret)

  -- Now try again after opening the file.
  ret = stream(fileName, 'C', "open")
  self~assertSame("READY:", ret)
  ret = stream(fileName, 'C', "query position sys")
  self~assertTrue(0 == ret)

  -- tearDown() will delete the file


