::method test_openBoth_append

  str = '1234567890'
  fileName = createFile(.array~of(str), "delMe.test_stream_open")
  self~assertTrue(fileName \== "")
  self~streamTestingFile = fileName

  ret = stream(fileName, 'C', "open both append")
  self~assertSame("READY:", ret)

  ret = lineout(fileName, str)
  self~assertSame(0, ret)

  ret = stream(fileName, 'C', "close")
  self~assertSame("READY:", ret)

  expected = (2 * str~length) + (2 * .endOfLine~length)
  size = stream(fileName, 'C', "query size")
  self~assertSame(expected, size)

  do 2
    l = linein(fileName)
    self~assertSame(str, l)
  end
  self~assertSame(0, chars(fileName))

