::method 'test41'
    numeric digits 10
    num121etc = 1216536753
    num3      = 3
    num4      = 4
    num5      = 5
    xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx=3520514261

    self~assertSame('', d2c(num121etc,0))
    self~assertSame('B1'x, d2c(num121etc,'31'x))
    self~assertSame('82E0B1'x, d2c(num121etc,num3))
    self~assertSame('4882E0B1'x, d2c(num121etc,num4))
    self~assertSame('004882E0B1'x, d2c(num121etc,num5))
    self~assertSame(copies('00'x,246)||'48'x||'82E0'x||'B1'x, d2c(num121etc,2.50E+2))
    self~assertSame(copies('00'x,247)||'48'x||'82E0'x||'B1'x, d2c(num121etc,251))
    self~assertSame(copies('00'x,9996)||'48'x||'82E0'x||'B1'x, d2c(num121etc,1000*10))
    self~assertSame('D1D6C8D5'x, d2c(xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx))

