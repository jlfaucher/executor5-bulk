::requires 'ooTest.frm'
::requires 'FileUtils.cls'

/* class: LineOut.testGroup- - - - - - - - - - - - - - - - - - - - - - - - - -*\

\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "LineOut.testGroup" public subclass ooTestCase

::method test_simple

  -- Set things up, be sure we are opened okay
  f = 'lineOutTest.delMe'
  ret = stream(f, 'C', "OPEN")
  self~assertSame("READY:", ret)

  -- Should return 0 on success
  ret = lineout(f, "line 1")
  self~assertSame(0, ret)

  -- Close and delete the file
  ret = stream(f, 'C', "CLOSE")
  self~assertSame("READY:", ret)

  j = deleteFile(f)

::method test_lineoutCloses

  f = 'lineOutClosesTest.delMe'
  ret = stream(f, 'C', "OPEN")
  self~assertSame("READY:", ret)

  ret = lineout(f, "line 1")
  self~assertSame(0, ret)

  -- Close the file using lineout()
  ret = lineout(f)
  self~assertSame(0, ret)

  -- Now, if the file was not closed, we won't be able to delete it using
  -- SysFileDelete().
  ret = SysFileDelete(f)
  self~assertSame(0, ret)

::method test_lineout_double_close

  f = "lineout.delMe"
  ret = lineout(f, 'line 1')
  self~assertSame(0, ret)

  -- Close the file, return should be 0 and query state should be unknown
  ret = lineout(f)
  state = stream(f, "STATE")

  self~assertSame(0, ret)
  self~assertSame("UNKNOWN", state)

  -- Close it again and expect the same results.  This is a regression test, at
  -- one time there was a bug where a second close was corrupting the heap.
  ret = lineout(f)
  state = stream(f, "STATE")

  self~assertSame(0, ret)
  self~assertSame("UNKNOWN", state)

  ret = deleteFile(f)

-- End of class: LineOut.testGroup


::options novalue error
