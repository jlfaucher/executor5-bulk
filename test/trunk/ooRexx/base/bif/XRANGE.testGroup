-- test one range: character class name
::method test_xrange_class
  do class over self~classNames
    sequence = self~sequence(class)
    self~assertSame(sequence, xrange(class))
    self~assertSame(sequence, xrange(class~upper))
    self~assertSame(sequence, xrange(class~upper(2)))
    self~assertSame(sequence, xrange(class~upper(, 2)))
  end


-- test two ranges: character class, character class
::method test_xrange_class_class
    self~assertSame(self~sequence("alpha"), xrange("upper", "lower"))
    self~assertSame(self~sequence("ALNUM"), xrange("digit", "Alpha"))
    self~assertSame(self~sequence("Cntrl")~copies(2), xrange("CNTRL", "CNTRL"))


-- test two ranges: hex range, character class
::method test_xrange_hex_class
    self~assertSame(self~sequence("alnum"), xrange(0, 9, "alpha"))
    self~assertSame(self~sequence("print"), xrange(" ", " ", "graph"))
    self~assertSame(1 || self~sequence("cntrl"), xrange(1, 1, "CNTRL"))
    self~assertSame('00'x || self~sequence("cntrl"), xrange(     , '00'x, "CNTRL"))
    self~assertSame('00'x || self~sequence("cntrl"), xrange('00'x, '00'x, "CNTRL"))
    self~assertSame("abc" || self~sequence("digit"), xrange("a", "c", "Digit"))


-- test two ranges: character class, hex range
::method test_xrange_class_hex
    self~assertSame(self~sequence("alpha"), xrange("upper", "a", "z"))
    self~assertSame(self~sequence("UPPER") || " ", xrange("upper", " ", " "))


