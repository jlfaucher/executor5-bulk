-- test three ranges
::method test_xrange_three
    self~assertSame(self~sequence("alnum"), xrange(0, 9,  "A", "Z", "a", "z"))
    self~assertSame(self~sequence("alnum"), xrange(digit, "A", "Z", "a", "z"))
    self~assertSame(self~sequence("alnum"), xrange(0, 9,  upper,    "a", "z"))
    self~assertSame(self~sequence("alnum"), xrange(digit, upper,    "a", "z"))
    self~assertSame(self~sequence("alnum"), xrange(0, 9,  "A", "Z", lower))
    self~assertSame(self~sequence("alnum"), xrange(0, 9,  "A", "Z", lower))
    self~assertSame(self~sequence("alnum"), xrange(digit, "A", "Z", lower))
    self~assertSame(self~sequence("alnum"), xrange(0, 9,  upper,    lower))
    self~assertSame(self~sequence("alnum"), xrange(digit, upper,    lower))
    self~assertSame(self~sequence("xdigit"), xrange(0, 9,  "A", "F", "a", "f"))
    self~assertSame(self~sequence("xdigit"), xrange(digit,  "A", "F", "a", "f"))
    self~assertSame("thirst", xrange("t", "t", "h", "i", "r", "t"))
    self~assertSame('00 00 00'x, xrange('0'x,'0'x, '0'x, '0'x, '0'x, '0'x))
    self~assertSame(xrange()~copies(2), xrange('00'x, 'FE'x, 'ff'x, '00'x, '01'x, 'ff'x))
    self~assertSame(xrange()~copies(2), xrange(     , 'FE'x, 'ff'x, '00'x, '01'x, 'ff'x))
    self~assertSame(xrange()~copies(2), xrange('00'x, 'FE'x, 'ff'x, '00'x, '01'x,      ))
    self~assertSame(xrange()~copies(2), xrange(     , 'FE'x, 'ff'x, '00'x, '01'x,      ))
    self~assertSame(xrange()~copies(2), xrange('00'x, '80'x, '81'x, '80'x, '81'x, 'ff'x))
    self~assertSame(xrange()~copies(2), xrange(     , '80'x, '81'x, '80'x, '81'x, 'ff'x))
    self~assertSame(xrange()~copies(2), xrange('00'x, '80'x, '81'x, '80'x, '81'x,      ))
    self~assertSame(xrange()~copies(2), xrange(     , '80'x, '81'x, '80'x, '81'x,      ))


