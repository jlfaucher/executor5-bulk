    expected = ""
    do name over self~classNames
      expected ||= name~contains("a")~"?"(" ", "") || self~sequence(name)
    end
    self~assertSame(expected, xrange(" ", " ", "alnum", " ", " ", "alpha", " ", " ", "blank", "cntrl", "digit", " ", " ", "graph", "lower", "print", "punct", " ", " ", "space", "upper", "xdigit"))



-- return character sequence representing the given POSIX class name
::method sequence
  use strict arg name
  /*
  [:alnum:] [A-Za-z0-9]   Alphanumeric characters
  [:alpha:] [A-Za-z]      Alphabetic characters
  [:blank:] [ \t]         Space and tab
  [:cntrl:] [\x00-\x1F\x7F]       Control characters
  [:digit:] [0-9]         Digits
  [:graph:] [\x21-\x7E]   Visible characters
  [:lower:] [a-z]         Lowercase letters
  [:print:] [\x20-\x7E]   Visible characters and the space character
  [:punct:] [][!"#$%&'()*+,./:;<=>?@\^_`{|}~-]    Punctuation characters
  [:space:] [ \t\r\n\v\f]         Whitespace characters
  [:upper:] [A-Z]         Uppercase letters
  [:xdigit:] [A-Fa-f0-9]  Hexadecimal digits
  */
  select case name~lower
    when "alnum" then return self~sequence("digit") || self~sequence("alpha")
    when "alpha" then return self~sequence("upper") || self~sequence("lower")
    when "blank" then return '09 20'x
    when "cntrl" then return self~range('00'x, '1f'x) || '7f'x
    when "digit" then return 0123456789
    when "graph" then return self~range('21'x, '7e'x)
    when "lower" then return "abcdefghijklmnopqrstuvwxyz"
    when "print" then return " " || self~sequence("graph")
    when "punct" then return "!""#$%&'()*+,-./:;<=>?@[\]^_`{|}~"
    when "space" then return '09 0a 0b 0c 0d 20'x
    when "upper" then return self~sequence("lower")~upper
    when "xdigit" then return self~sequence("digit") || "ABCDEFabcdef"
  end


-- return character range from start to end
::method range
  use strict arg start, end
  range = ""
  do n = start~c2d to end~c2d
    range || = n~d2c
  end
  return range

-- return Array of Posix character class names
::method classNames
  use strict arg -- no args allowed
  return "alnum", "alpha", "blank", "cntrl", "digit", "graph", "lower", "print", "punct", "space", "upper", "xdigit"
