  testUnitList = .list~of(.array~of(.bug1853738.testGroup, .list~new))

  srcLines = .array~new
  do i = 1 to 150 until srcLines[i] = "*/"
     srcLines[i] = sourceline(i)
  end

  call makeDirTestInfo .bug1853738.testGroup, srcLines

  parse source s
  .bug1853738.testGroup~testCaseInfo~setentry("test_Case-source", s)

  if \ .local~hasentry("bRunTestsLocally") then
     .local~bRunTestsLocally = .true

  if .bRunTestsLocally == .true then do
    ts = .TestSuite~new
    ts~addTest(.TestSuite~new(.bug1853738.testGroup))

    testResult = ts~run
    call simpleFormatTestResults testResult
  end

return testUnitList
