::requires 'ooTest.frm'

/* class: SimpleTests.testGroup- - - - - - - - - - - - - - - - - - - - - - - -*\
    This test case class just does some very simple tests.  It's main purpose
    is to provide an easy to run, short, test group to run when the interpreter
    is crashing very early in the execution of the test suite.
\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "SimpleTests.testGroup" public subclass ooTestCase

  ::method test_true_is_true
    self~assertTrue(.true)

  ::method  test_strings_are_same
    self~assertSame('dog', 'dog')

  ::method test_addition

    n1 = 5
    n2 = 7

    self~assertTrue(n1 + n2 == 12)
    self~assertFalse(n1 + n2 == 13)

  ::method test_object_new
    obj = .Object~new
  	self~assertTrue(obj~isA(.Object))

  ::method test_object_class
    obj = .Object~new
    self~assertSame(.Object, obj~class)

  ::method test_strings
    str1 = "Dog"
    str2 = "Cat"

    self~assertNotSame(str1, str2)

    str3 = "Dog"
    self~assertSame(str1, str3)

  ::method test_name_that_is_very_long_to_test_long_things
    num1 = 18
    num2 = 3
    expected = 6

    self~assertSame(expected, num1 / num2)

-- End of class: SimpleTests.testGroup


::options novalue error
