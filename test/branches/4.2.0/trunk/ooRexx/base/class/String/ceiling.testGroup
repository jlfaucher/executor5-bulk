  parse source . . s
  group = .TestGroup~new(s)
  group~add(.String_ceilingMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "String_ceilingMethod.testGroup" subclass ooTestCase public

::method 'testzero'
    self~assertSame(0, 0~ceiling)
    self~assertSame(0, '0'~ceiling)
    self~assertSame(0, 0.0~ceiling)
    self~assertSame(0, .00000000~ceiling)
    self~assertSame(0, '-0'~ceiling)
    self~assertSame(0, 0e0~ceiling)

::method 'testinteger'
    self~assertSame('1', 000001~ceiling)
    self~assertSame('-1', ('-000001')~ceiling)
    self~assertSame('5', '5'~ceiling)
    self~assertSame('-5', (-5)~ceiling)
    self~assertSame('5', 5~ceiling)
    self~assertSame('-5', (-5)~ceiling)
    self~assertSame('5', 5.00000~ceiling)
    self~assertSame('-5', (-5.00000)~ceiling)
    -- these will be truncated by rounding first, so the positive
    -- one will not go to 6
    self~assertSame('5', 5.000000001~ceiling)
    self~assertSame('-5', ('-5.000000001')~ceiling)

    self~assertSame('50', 5e1~ceiling)
    self~assertSame('-50', ('-5e1')~ceiling)

::method 'testnoninteger'
    self~assertSame('6', 5.1~ceiling)
    self~assertSame('-5', '-5.1'~ceiling)
    -- limit of default digits, so no rounding
    self~assertSame('6', 5.00000001~ceiling)
    self~assertSame('-5', '-5.00000001'~ceiling)
    -- these will round and carry into the significant
    -- digits, so there are decimals
    self~assertSame('6', '5.000000009'~ceiling)
    self~assertSame('-5', '-5.000000009'~ceiling)
    -- code has special checks for values between zero and one, so test this explicitly

    self~assertSame('1', 0.1~ceiling)
    self~assertSame('0', '-0.1'~ceiling)
    -- limit of default digits, so no rounding
    self~assertSame('1', 0.111111111~ceiling)
    self~assertSame('0', '-0.111111111'~ceiling)

::method 'testroundout'
    self~assertSame('10', '9.1'~ceiling)
    self~assertSame('-9', '-9.1'~ceiling)
    self~assertSame('100000', '99999.1'~ceiling)
    self~assertSame('-99999', '-99999.1'~ceiling)

::method 'testnoexp'
   self~assertSame('1000000000000', '1e12'~ceiling)
   self~assertSame('-1000000000000', '-1e12'~ceiling)

::method 'testnumericerror'
    self~expectSyntax(93.943)
    xre=nov~ceiling

::method 'testargerror'
    self~expectSyntax(93.902)
    xre=nov~ceiling(2)
