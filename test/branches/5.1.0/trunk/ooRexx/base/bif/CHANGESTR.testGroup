  parse source . . s
  group = .TestGroup~new(s)
  group~add(.CHANGESTR.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult


::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "CHANGESTR.testGroup" subclass ooTestCase public

::method "test_1"
   self~assertSame('101100', CHANGESTR('','101100','X'))

::method "test_2"
   self~assertSame('', CHANGESTR('1',''     ,'X'))

::method "test_4"
   self~assertSame('ha-lo', CHANGESTR('l','hallo','-',1))

::method "test_5"
   self~assertSame('ha--o', CHANGESTR('l','hallo','-',2))

::method "test_6"
   self~assertSame('ha--o', CHANGESTR('l','hallo','-',3))

::method test_count_zero
   self~assertSame("Test", changestr("t", "Test", "-", 0))

::method test_count_negative
   self~expectSyntax(93.906) -- Method argument .. must be zero or a positive whole number
   call changeStr "t", "Test", "-", -1


-- rexxref documentation tests

::method "test_101"
   self~assertSame('000', CHANGESTR('1','101100',""))

::method "test_102"
   self~assertSame('X0XX00', CHANGESTR('1','101100','X'))


::options novalue error
