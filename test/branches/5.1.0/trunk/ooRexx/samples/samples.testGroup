::method test_rexxcps
  output = self~assertSampleRuns("rexxcps.rex", 5)
  -- last output line should be "Performance: nnnnnn REXX clauses per second"
  cps = "REXX clauses per second"
  line = output[output~last]~strip
  parse var line before (cps)
  self~assertTrue(line~contains(cps) & before~words > 0, "last line expected to contain 'nnnnnn" cps"'; found" .endofline line)
  n = before~word(before~words)
  -- e. g. the Raspberry Pi rexxcps value is below 500.000
  self~assertTrue(n > 200000 & n < 100000000, cps "expected to be between 200.000 and 100.000.000; found" .endofline line)

