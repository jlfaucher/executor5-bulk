  parse source . . s

  group = .TestGroup~new(s)
  group~add(.SysDumpVariables.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm'


::class "SysDumpVariables.testGroup" public subclass ooTestCase

::method test_no_args_too_many
  self~expectSyntax(88.922) -- Too many arguments in invocation; 1 expected
  call SysDumpVariables 1, 2

::method test_none
  dump = .TemporaryTestFile~new(self, "SysDumpVariables.out")
  dump~delete
  call DumpVariables dump~fullName
  output = dump~arrayIn
  -- we expect no variables to appear in the dump
  self~assertEquals(0, output~items)

::method test_simple_and_stem
  dump = .TemporaryTestFile~new(self, "SysDumpVariables.out")
  dump~delete
  empty = ""
  stem.1 = "one"
  variable = "dump"
  call SysDumpVariables dump~fullName
  output = dump~arrayIn
  self~assertTrue(output~hasItem("Name=EMPTY, Value=''"))
  self~assertTrue(output~hasItem("Name=STEM., Value='STEM.'"))
  self~assertTrue(output~hasItem("Name=STEM.1, Value='one'"))
  self~assertTrue(output~hasItem("Name=VARIABLE, Value='dump'"))

::method test_long
  dump = .TemporaryTestFile~new(self, "SysDumpVariables.out")
  dump~delete
  longName = "VAR" || "X"~copies(247)
  call value longName, "long"
  longValue = "v"~copies(20000)
  var = longValue
  call SysDumpVariables dump~fullName
  output = dump~arrayIn
  self~assertTrue(output~hasItem("Name=" || longName || ", Value='long'"))
  self~assertTrue(output~hasItem("Name=VAR, Value='" || longValue || "'"))

::routine DumpVariables
  -- no local variables are declared here
  call SysDumpVariables arg(1)


::options novalue error
