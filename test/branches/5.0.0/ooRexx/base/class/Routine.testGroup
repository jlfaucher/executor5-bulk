::class "Routine.testGroup" subclass ooTestCase public

::constant newFileTestName "newFile.rex"         -- should be in the same directory as this test
::attribute newFileTest get                      -- full path of "newFile.rex"
  return self~class~newFileTest
::attribute newFileTest get class

-- set up 'newFileTest'
::method activate class
  expose arg newFileTest
  -- 'newFileTest' should be in the same directory as this test is
  -- but in general, we will not be running with this as the current directory
  -- so we need to figure out the absolute path to 'newFileTest'
  parse source . . path
  location=filespec('location', path)  -- honor also drive letter on Windows
  newFileTest = location || self~newFileTestName
   -- 20200816: the following file names are used for creating and compiling code
   --           to test 'new' and 'newFile'; do not change the order
  files="tmpTest_ExternalCode_Source.rex",             -
        "tmpTest_ExternalCode_CompiledAndEncoded.rex", -
        "tmpTest_ExternalCode_Compiled.rex"
   do counter i fn over files
      files[i]=location || fn  -- fully qualify the filenames
   end
  .context~package~local~tmpCodeFiles=files  -- save array in package local
  .context~package~local~recreateTmpCodeFiles?=.true  -- indicate we need to recreate the files

  forward class (super)


