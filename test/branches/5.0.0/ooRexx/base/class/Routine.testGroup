-- test [bugs:#1373] Source method strips leading comments/whitespace
::method test_routine_source
  source = routine_source_nop()
  self~assertSame("  nop", source[1])
  self~assertTrue(source[source~last]~startsWith("--"))

  source = routine_source_comment()
  self~assertSame("  -- comment", source[1])
  self~assertTrue(source[source~last]~startsWith("--"))

  source = routine_source_whitespace()
  self~assertSame("", source[1])
  self~assertTrue(source[source~last]~startsWith("--"))

