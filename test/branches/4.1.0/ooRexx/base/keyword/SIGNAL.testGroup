  parse source . . s
  group = .TestGroup~new(s)
  group~add(.SIGNAL.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult



::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "SIGNAL.testGroup" subclass ooTestCase public

::method "test_1"
   signal on syntax
   a = 10101k
   self~assertTrue(0)
   return

   syntax:
   self~assertSame(condition('cs'), 'SYNTAX')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

::method "test_2"
   signal on syntax
   raise syntax 41.1
   self~assertTrue(0)
   return

   syntax:
   self~assertSame(condition('cs'), 'SYNTAX')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

::method "test_3"
   signal on novalue
   a = z
   self~assertTrue(0)
   return

   novalue:
   self~assertSame(condition('cs'), 'NOVALUE')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

::method "test_4"
   signal on novalue
   call myproc
   self~assertTrue(0)
   return

   novalue:
   self~assertSame(condition('cs'), 'NOVALUE')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

   myproc:
   raise novalue return
   return

::method "test_5"
   signal on error
   trace off

   -- Prevent error messages from the shell printing on the console.
   select
     when .ooRexxUnit.OSName == "WINDOWS"then toNull = '1>nul 2>&1'
     when .ooRexxUnit.OSName == "LINUX"then toNull = '>/dev/null 2>&1'
     otherwise toNull = "" -- Not sure what works on other OSes
   end

   'zxyabc' toNull -- deliberate error, this command should not be found!
   self~assertTrue(0)
   return

   error:
   self~assertSame(condition('cs'), 'ERROR')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

::method "test_6"
   signal on error
   call myproc
   self~assertTrue(0)
   return

   error:
   self~assertSame(condition('cs'), 'ERROR')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

   myproc: procedure
   raise error 44.1 return
   return

::method "test_7"
   signal on user badvalue
   call myproc
   self~assertTrue(0)
   return

   badvalue:
   self~assertSame(condition('cs'), 'USER BADVALUE')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

   myproc: procedure
   raise user badvalue return
   return

::method "test_8"
   signal on failure
   trace off

   address xyzzy 'grue'  -- this is a deliberate unknown command
   self~assertTrue(0)
   return

   failure:
   self~assertSame(condition('cs'), 'FAILURE')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

::method "test_9"
   signal on failure
   call myproc
   self~assertTrue(0)
   return

   failure:
   self~assertSame(condition('cs'), 'FAILURE')
   self~assertSame(condition('i'), 'SIGNAL')
   self~assertSame(condition('s'), 'OFF')
   return

   myproc: procedure
   raise failure 44.1 return
   return

