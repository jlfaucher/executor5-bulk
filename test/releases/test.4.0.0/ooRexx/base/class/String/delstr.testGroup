-- from bif.testgroup
   -- test the BIF, using examples from the documentation
::method "test_DELSTR"
    self~assertSame('ab', 'abcd'~delstr(3))
    self~assertSame('abe', 'abcde'~delstr(3,2))
    self~assertSame('abcde', 'abcde'~delstr(6))

   -- new tests
    self~assertSame('', 'abcde'~delstr(1))
    self~assertSame('bcde', 'abcde'~delstr(1,1))
    self~assertSame('abcde', 'abcde'~delstr(1,0))
    self~assertSame('abcde', 'abcde'~delstr(3,0))
    self~assertSame('abde', 'abcde'~delstr(3,1))
    self~assertSame('abcde', 'abcde'~delstr(9))

