  parse source . . s
  group = .TestGroup~new(s)
  group~add(.caselessChangestr.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "caselessChangestr.testGroup" subclass ooTestCase public

::method "test_ChangeStr_caseless"
   b = .mutableBuffer~new('aAbBcC')
   self~assertSame('aABBcC', b~caselessChangeStr('b',"B")~string)
   b = .mutableBuffer~new('aAbBcC')
   self~assertSame('aAbbcC', b~caselessChangeStr('B',"b")~string)
   b = .mutableBuffer~new('aAbBcC')
   self~assertSame('aA99cC', b~caselessChangeStr('B',"9")~string)

   -- new tests: optional, trailing "count" argument
   b = .mutableBuffer~new('hallo')
    self~assertSame('ha-lo', b~caselessChangeStr('L','-',1)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha-lo', b~caselessChangeStr('L','-',1)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha-Lo', b~caselessChangeStr('L','-',1)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha-lo', b~caselessChangeStr('l','-',1)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha-Lo', b~caselessChangeStr('l','-',1)~string)

   b = .mutableBuffer~new('hallo')
    self~assertSame('ha--o', b~caselessChangeStr('l','-',2)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha--o', b~caselessChangeStr('L','-',2)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha--o', b~caselessChangeStr('L','-',2)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha--o', b~caselessChangeStr('l','-',2)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha--o', b~caselessChangeStr('l','-',2)~string)

   b = .mutableBuffer~new('hallo')
    self~assertSame('ha--o', b~caselessChangestr('l','-',3)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha--o', b~caselessChangeStr('L','-',3)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha--o', b~caselessChangeStr('L','-',3)~string)
   b = .mutableBuffer~new('haLlo')
    self~assertSame('ha--o', b~caselessChangeStr('l','-',3)~string)
   b = .mutableBuffer~new('haLLo')
    self~assertSame('ha--o', b~caselessChangeStr('l','-',3)~string)

::method "test_changeStr_caseless_error_93.907"
    self~expectSyntax(93.907)
    b = .mutableBuffer~new('haLLo')
    b~caselessChangeStr('a','A',0)

