  parse source . . s
  group = .TestGroup~new(s)
  group~add(.TRANSLATE.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

-- class named exactly like file
::class "TRANSLATE.testGroup" subclass ooTestCase public

::method 'test000'
    .local~vit = copies('0',100000)||'b'
    .local~vot = copies('1',100000)||'B'

::method 'test001'
    self~assertSame(('ABC'), translate('abc'))

::method 'test002'
    self~assertSame(('123$'), translate('00010203'x,'123',,'$'))

::method 'test003'
    self~assertSame(('123 '), translate('00010203'x,'123'))

::method 'test004'
    self~assertSame(('123 '), translate('00010203'x,'123',))

::method 'test005'
    self~assertSame(('aBc'), translate('abc',.vot,.vit))

::method 'test006'
    self~assertSame(('14.def'), translate('abcdef','123456','aaabbbcc','.'))

::method 'test007'
    self~assertSame('$$$$$$$', translate('abcdef ',,,'$'))

::method 'test008'
    self~expectSyntax(40.23)
    xre = translate('abcdef ',,,'$1')

::method 'test009'
    self~assertSame('1bEdef ', translate('abcdef ',1e+17,'ac','1'))

::method 'test010'
    numeric digits 100
    self~assertSame('1b0def ', translate('abcdef ',+1e+17,'ac','1'))

::method 'test011'
    self~expectSyntax(40.23)
    xre = translate('abc',.vot,.vit,nov)

::method 'test012'
