    xre = translate('abc',.vot,.vit,nov)

::method 'test017'
    self~expectSyntax(40.23)
    xre=translate(nov1,nov2,nov3,nov4)

::method 'test018'
    numeric digits 100
    self~assertSame('azcd', translate(translate('abcd','&','b'),translate('y','z','y'),translate('x','&','x')))

::method 'test019'
    .local~remove(vit)
    .local~remove(vot)

-- from bif.testgroup
   -- test the BIF, using examples from the documentation
::method "test_TRANSLATE"
    self~assertSame('ABCDEF', TRANSLATE('abcdef'))
    self~assertSame('ab2d1f', TRANSLATE('abcdef','12','ec'))
    self~assertSame('12..ef', TRANSLATE('abcdef','12','abcd','.'))
    self~assertSame('A Q V', TRANSLATE('APQRV', ,'PR'))
    self~assertSame('APQ  ', TRANSLATE('APQRV',XRANGE('00'X,'Q')))
    self~assertSame('dabc', TRANSLATE('4123','abcd','1234'))

::method "testStart01"
    self~assertSame(('aBC'), translate('abc',,,,2))
    self~assertSame(('aBc'), translate('abc',,,,2,1))
    self~assertSame(('Abc'), translate('abc',,,,,1))
    self~assertSame('a4.def', translate('abcdef','123456','aaabbbcc','.', 2, 3))
    self~assertSame('a$$def ', translate('abcdef ',,,'$',2,2))
    self~assertSame('a$$$$$$', translate('abcdef ',,,'$',2))
    self~assertSame('abcdef ', translate('abcdef ',,,'$',2,0))
    self~assertSame('abcdef ', translate('abcdef ',,,'$',8,6))

::method testStart02
    self~expectSyntax(93.924)
    x = translate('abcdef ',,,'$',0,6)

::method testStart03
    self~expectSyntax(40.12)
    x = translate('abcdef ',,,'$',"xxx",6)

::method testStart04
    self~expectSyntax(40.12)
    x = translate('abcdef ',,,'$',0.5,6)

::method testStart05
