::method test_out_of_range
  self~of(a., 'a', 'b', 'c', 'f', 'd', 'e', )
  self~expectSyntax("40.923")
  rv = SysStemSort('a.',,,,7)

::method test_sparse_array
  self~of(a., 'c', 'b', 'a', 'f', 'd', 'e')
  drop a.2
  self~expectSyntax("40.924")
  rv = SysStemSort('a.')

::method verifySeq
  use arg source., result.

  do i=0 to result.0
     self~assertEquals(source.i, result.i)
  end

::method of
  use arg target.
  values = arg(2, 'a')

  target.0 = values~items
  do i = 1 to target.0
      target.i = values[i]
  end

::method dumpstem
  use arg a.
  say "size is" a.0

  do i = 1 to a.0
      say "Item" i "is" a.i
  end

