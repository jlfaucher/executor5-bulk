::method "test_sort"

  self~of(a.)
  self~of(a1.)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1)
  self~of(a1., 1)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1,2)
  self~of(a1., 1,2)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 1,2,3)
  self~of(a1., 1,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1,3)
  self~of(a1., 1,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1,3,2)
  self~of(a1., 1,2,2,3)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  self~of(a., 2,1)
  self~of(a1., 1,2)
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  -- the mergesort algorithm uses an insersion sort for partitions with fewer than
  -- 8 items, so we need to throw in a few longer variations

  self~of(a., 'y', 'o', 'i', 'x', 'u', 'q', 'e', 'l', 'p', 'b', 'g', 't', 'd', 'c', 'z', 'm', 'h', 'v', 'j', 'r', 'a', 'n', 'f', 'w', 'k', 's')
  self~of(a1., 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z')
  self~assertEquals(0, SysStemSort('a.'))
  self~verifySeq(a., a1.)

  return

