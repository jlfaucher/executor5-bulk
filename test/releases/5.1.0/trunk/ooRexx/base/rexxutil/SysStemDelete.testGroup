::requires 'ooTest.frm'

/* class: SysStemDelete.testGroup  - - - - - - - - - - - - - - - - - - - - - - -*\

\* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -*/
::class "SysStemDelete.testGroup" public subclass ooTestCase

::method test_deletes

  self~of(a., 'a', 'b', 'c')
  self~of(e., 'b', 'c')
  self~assertEquals(0, SysStemDelete('a.', 1))
  self~verifySeq(a., e.)

  self~of(a., 'a', 'b', 'c')
  self~of(e., 'a', 'c')
  self~assertEquals(0, SysStemDelete('a.', 2))
  self~verifySeq(a., e.)

  self~of(a., 'a', 'b', 'c')
  self~of(e., 'a', 'b')
  self~assertEquals(0, SysStemDelete('a.', 3))
  self~verifySeq(a., e.)

  self~of(a., 'a', 'b', 'c')
  self~of(e., 'c')
  self~assertEquals(0, SysStemDelete('a.', 1, 2))
  self~verifySeq(a., e.)

  self~of(a., 'a', 'b', 'c')
  self~of(e., )
  self~assertEquals(0, SysStemDelete('a.', 1, 3))
  self~verifySeq(a., e.)


::method test_unset_count
  a.1 = 'a'
  self~expectSyntax("40.922")
  rv = SysStemDelete(a., 1)

::method test_bad_count
  a.0 = '*'
  a.1 = 'a'
  self~expectSyntax("40.922")
  rv = SysStemDelete(a., 1)

::method test_out_of_range
  self~of(a., 'a', 'b', 'c')
  self~expectSyntax("40.923")
  rv = SysStemDelete('a.',4)

::method test_out_of_count
  self~of(a., 'a', 'b', 'c', 'f', 'd', 'e', )
  self~expectSyntax("40.923")
  rv = SysStemDelete('a.',5, 4)

::method verifySeq
  use arg source., result.

  do i=0 to result.0
     self~assertEquals(source.i, result.i)
  end

::method of
  use arg target.
  values = arg(2, 'a')

  target.0 = values~items
  do i = 1 to target.0
      target.i = values[i]
  end

::method dumpstem
  use arg a.
  say "size is" a.0

  do i = 1 to a.0
      say "Item" i "is" a.i
  end

-- End of class: SysStemSort.testGroup


::options novalue error

