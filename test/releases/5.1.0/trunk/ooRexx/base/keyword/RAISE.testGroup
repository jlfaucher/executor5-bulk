parse source . . fileSpec
group = .TestGroup~new(fileSpec)
group~add(.RAISE.testGroup)
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'

::class RAISE.testGroup subclass ooTestCase public


-- ANY ERROR FAILURE HALT LOSTDIGITS NOMETHOD NOMETHOD
