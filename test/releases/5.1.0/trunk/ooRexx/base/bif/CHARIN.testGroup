-- Tests using 0 for start position.
::method test_charin_0_start

  fileName = createFile(.array~of('1234567890'), "delMe.test_charin_0_start")
  self~assertTrue(fileName \== "")
  self~charInTestingFile = fileName

  self~expectSyntax(93.907)
  r = charin(fileName, 0, 6)

-- Tests using 0 for length.
::method test_charin_0_length

  fileName = createFile(.array~of('1234567890'), "delMe.test_charin_0_length")
  self~assertTrue(fileName \== "")
  self~charInTestingFile = fileName

  r = charin(fileName, , 0)
  self~assertSame("", r)

  len = '1234567890'~length + .endOfLine~length

  -- Should still be at position 1 and should be able to read whole file
  r = charin(fileName, , len)
  self~assertTrue(r~length == len)
  self~assertSame('1234567890' || .endOfLine, r)

  -- Position to end of line character.
  r = charin(fileName, '1234567890'~length + 1, 0)
  self~assertSame("", r)

  r = charin(fileName,  , .endOfLine~length)
  self~assertTrue(r~length == .endOfLine~length)
  self~assertSame(.endOfLine, r)
  self~assertTrue(chars(fileName) == 0)


-- Tests some defaults
::method test_charin_defaults_01

  fileName = createFile(.array~of('1234567890'), "delMe.test_charin_defualts_01")
  self~assertTrue(fileName \== "")
  self~charInTestingFile = fileName

  -- default is to read 1 character from start of file when first opened.
  r = charin(fileName)
  self~assertTrue(r~length == 1)
  self~assertTrue(r == 1)

  -- default is to read 1 character when positioned.
  r = charin(fileName, 9)
  self~assertTrue(r~length == 1)
  self~assertTrue(r == 9)

  -- default is to read 1 character from current position.
  r = charin(fileName)
  self~assertTrue(r~length == 1)
  self~assertTrue(r == 0)
  self~assertTrue(chars(fileName) == .endOfLine~length)


::options novalue error
