-- Tests using a negative number for length, start position at 1.
::method test_charin_negative_length

  fileName = createFile(.array~of('1234567890'), "delMe.test_charin_negative_length")
  self~assertTrue(fileName \== "")
  self~charInTestingFile = fileName

  self~expectSyntax(88.907)
  r = charin(fileName, , -6)


-- Tests using a negative number for length start position at the end of the file.
::method test_charin_negative_length2

  fileName = createFile(.array~of('1234567890'), "delMe.test_charin_negative_length2")
  self~assertTrue(fileName \== "")
  self~charInTestingFile = fileName

  len = '1234567890'~length + .endOfLine~length
