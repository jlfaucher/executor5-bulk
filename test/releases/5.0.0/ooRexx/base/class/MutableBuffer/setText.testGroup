  parse source . . s
  group = .TestGroup~new(s)
  group~add(.setText.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "setText.testGroup" subclass ooTestCase public

::method "test_setText"

  null = ""
  n123 = 123
  long = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
  veryLong = xrange('00'x, 'ff'x)~copies(100)

  do initial over null, n123, long, veryLong

    -- start with iniital, and in turns set buffer to null, 123, long, veryLong
    buffer = .MutableBuffer~new(initial)
    set = buffer~setText(null)
    self~assertIdentical(buffer, set)  -- setText should return its receiving buffer (though changed)
    self~assertSame(null, set~string)

    buffer = .MutableBuffer~new(initial)
    set = buffer~setText(n123)
    self~assertIdentical(buffer, set)
    self~assertSame(n123, set~string)

    buffer = .MutableBuffer~new(initial)
    set = buffer~setText(long)
    self~assertIdentical(buffer, set)
    self~assertSame(long, set~string)

    buffer = .MutableBuffer~new(initial)
    set = buffer~setText(veryLong)
    self~assertIdentical(buffer, set)
    self~assertSame(veryLong, set~string)

  end


::method test_setText_no_arg
  self~expectSyntax(93.903)
  .MutableBuffer~new~setText

::method test_setText_no_string
  self~expectSyntax(88.909) -- Argument .. must have a string value
  .MutableBuffer~new~setText(.nil)

::method test_setText_two_args
  self~expectSyntax(93.902)
  .MutableBuffer~new~setText("", "")


::options novalue syntax
