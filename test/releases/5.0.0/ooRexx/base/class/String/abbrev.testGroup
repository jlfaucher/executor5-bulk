  parse source . . s
  group = .TestGroup~new(s)
  group~add(.String_abbrevMethod.testGroup)

  if group~isAutomatedTest then return group

  testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm' -- load the ooRexxUnit classes

::class "String_abbrevMethod.testGroup" subclass ooTestCase public

::method "test_1"
   self~assertSame(.true, ''~abbrev(''))

::method "test_2"
   self~assertSame(.false, ''~abbrev('a'))

::method "test_3"
   self~assertSame(.true, 'a'~abbrev(''))

::method "test_4"
   self~assertSame(.true, 'a'~abbrev('a'))

::method "test_5"
   self~assertSame(.false, 'a'~abbrev('b'))

::method "test_6"
   s="XRANGE"('00'x,'FF'x)
   Do i=0 To 256
      s30="SUBSTR"(s,1,30)
      t="SUBSTR"(s,1,i)
      self~assertSame(.true, s~abbrev(t))
      r="ABBREV"(s30,t)
      If i<=30 Then
         self~assertSame(.true, s30~abbrev(t))
      Else                 /* longer string is never abbrev of shorter */
         self~assertSame(.false, s30~abbrev(t))
      End

::method "test_7"
   do i=0 to 255
      do j=0 to 255
         s=d2c(i)||d2c(j)                /* s='0000'X...'FFFF'X            */
         t=d2c(j)                        /* t='00'X...'FF'X                */
         self~assertSame((i = j), s~abbrev(t, 1))
         End
      End

