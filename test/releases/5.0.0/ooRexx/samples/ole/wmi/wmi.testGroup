parse source . . s
group = .TestGroup~new(s)
group~add(.wmi.testGroup)
if locateSamplePrg("windows\ole\wmi") == .nil then
  group~markNoTests("This is a test group for windows\ole\wmi samples, but no such sample can be located")
group~restrictOS("WINDOWS")
if group~isAutomatedTest then
  return group
else
  return group~suite~execute~~print

::requires 'ooTest.frm'
::requires 'FileUtils.cls'


::class wmi.testgroup subclass ooTestCase public

::constant ooTestType (.ooTestTypes~SAMPLE_TEST)

::method test_accounts
  sample = locateSamplePrg("windows\ole\wmi\accounts.rex")
  self~assertNotNil(sample)
  output = .Array~new
  error = .Array~new
  self~assertRc(0, execRexxPrg(sample, output, error))
  self~assertSame(0, error~items, "unexpected error output" error~toString)
  self~assertTrue(output~items >= 20, "at least 20 lines of output expected; found" output~items)
  -- the last line is expected to start with "Status:" ("Status: OK")
  last = output[output~last]
  self~assertTrue(last~startsWith("Status:"), "last line expected to start with 'Status:'; found" last)

::method test_osinfo
  sample = locateSamplePrg("windows\ole\wmi\osinfo.rex")
  self~assertNotNil(sample)
  output = .Array~new
  error = .Array~new
  self~assertRc(0, execRexxPrg(sample, output, error))
  self~assertSame(0, error~items, "unexpected error output" error~toString)
  self~assertTrue(output~items >= 20, "at least 20 lines of output expected; found" output~items)
  -- the last line is expected to always be "OS type: WINNT"
  last = output[output~last]
  self~assertTrue(last~startsWith("OS type:"), "last line expected to start with 'OS type'; found" last)
  self~assertTrue(last~contains("WINNT"), "last line expected to conatin 'WINNT'; found" last)

::method test_process
  sample = locateSamplePrg("windows\ole\wmi\process.rex")
  self~assertNotNil(sample)
  output = .Array~new
  error = .Array~new
  self~assertRc(0, execRexxPrg(sample, output, error))
  self~assertSame(0, error~items, "unexpected error output" error~toString)
  self~assertTrue(output~items >= 20, "at least 20 lines of output expected; found" output~items)
  -- the last is line expected to have a number as its first word, e. g. "5832 rexx.exe"
  last = output[output~last]
  self~assertTrue(last~word(1)~dataType("num"), "last line expected to start with a number; found" last)

::method test_services
  sample = locateSamplePrg("windows\ole\wmi\services.rex")
  self~assertNotNil(sample)
  output = .Array~new
  error = .Array~new
  self~assertRc(0, execRexxPrg(sample, output, error, "Q"))
  self~assertSame(0, error~items, "unexpected error output" error~toString)
  self~assertTrue(output~items >= 20, "at least 20 lines of output expected; found" output~items)
  -- the last but fifth line expected to be like "[310] This service .."
  last = output[output~last - 5]
  self~assertTrue(last~startsWith("["), "last line expected to start with '['; found" last)


::options all syntax
